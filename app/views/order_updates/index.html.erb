<p id="notice"><%= notice %></p>

<h1>Listing Order Updates</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Orderno</th>
      <th>Order date</th>
      <th>Process date</th>
      <th>Shipped date</th>
      <th>Return date</th>
      <th>Cancel date</th>
      <th>Paid date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_updates.each do |order_update| %>
      <tr>
        <td><%= order_update.order_id %></td>
        <td><%= order_update.orderno %></td>
        <td><%= order_update.order_date %></td>
        <td><%= order_update.process_date %></td>
        <td><%= order_update.shipped_date %></td>
        <td><%= order_update.return_date %></td>
        <td><%= order_update.cancel_date %></td>
        <td><%= order_update.paid_date %></td>
        <td><%= link_to 'Show', order_update %></td>
        <td><%= link_to 'Edit', edit_order_update_path(order_update) %></td>
        <td><%= link_to 'Destroy', order_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

