<%= form_for @order_line , url: addproducts_path, :method => :POST do |f| %>
          <%= hidden_field_tag :calledno, @calledno %>
<%= hidden_field_tag :mobile, @mobile %>
            <div class="row">
             <%= hidden_field_tag :order_id, @order_id %>
             <%= f.hidden_field(:orderid) %>
              <div class="col-xs-9">

              

               <%= f.select(:product_list_id, 
                options_from_collection_for_select(@newproductlist, :id, :productlistdetails), 
                {:prompt => 'Please Choose Product'}, :class => "form-control col-xs-1")  %>

          
              </div>
              <div class="col-xs-2">
                <%= f.select :pieces, options_for_select(1..3), {}, :class => "form-control col-xs-1"  %>
              </div>
              <div class="col-xs-1">
                <%= f.submit "Add", class: "btn btn-primary "%>
              </div>
               
          </div>

<% end %>