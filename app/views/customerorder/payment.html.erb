                                        <%= hidden_field_tag :orderpaymentmode_id, @creditcardid %>
                                        <%= hidden_field_tag :order_id, @order_master.id %>
                                        <%= f.hidden_field(:id) %>
                                        <div class="col-xs-6 col-xs-offset-2">
                                        <%= submit_tag("Pay by Credit Card", :class => "btn btn-success") %> 
                                        </div>
                                  <% end %>   

                                  <% else %>

                                     <button type="button" class="btn btn-success " data-toggle="modal" data-target="#myModal">Pay by Credit Card</button>

                               <% end %>     
                    </div>
