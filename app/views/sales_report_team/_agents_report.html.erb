<% if @employeeorderlist.present? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
	     <th>No</th>
	     <th>Employee</th>
	     <th>Pay U Orders</th>
	     <th>Pay U Value</th>
	     <th>CC Orders</th>
	     <th>CC Value</th>
	     <th>COD Orders</th>
	     <th>COD Value</th>
	     <th>Total Orders</th>
	     <th>Total Value</th>
     </tr>
  </thead>
<tbody>
	<% total_pay_u_orders, total_pay_u_value, total_ccorders, total_ccvalue, total_codorders, total_codvalue, total_nos, total_value = 0, 0, 0, 0, 0, 0, 0, 0 %>
   <% @employeeorderlist.each do |c| %>
   	<tr>
		<td><%= @sno %></td>
		<td>
		 <%= link_to c[:employee], orderlist_path(employee_id: c[:id], for_date: c[:for_date], completed: 'yes'), :target => "_blank" %>

		</td>
		<td class="text-right">
		   <%= c[:pay_u_orders] %> <% total_pay_u_orders += c[:pay_u_orders] %>
		</td>
		<td class="text-right">
		   <%= c[:pay_u_value] %> <% total_pay_u_value += c[:pay_u_value] %>
		</td>
		<td class="text-right">
		   <%= c[:ccorders] %> <% total_ccorders += c[:ccorders] %>
		</td>
		<td class="text-right">
		   <%= c[:ccvalue] %> <% total_ccvalue += c[:ccvalue] %>
		</td>
		<td class="text-right">
		   <%= c[:codorders] %> <% total_codorders += c[:codorders] %>
		</td>
		<td class="text-right">
		   <%= c[:codvalue] %> <% total_codvalue += c[:codvalue] %>
		</td>
		<td class="text-right">
		   <%= c[:nos] %> <% total_nos += c[:nos] %>
		</td>
		<td class="text-right">
		   <%= c[:total] %> <% total_value += c[:total] %>
		</td>

  	</tr> 
  	<% @sno += 1 %> 
 <% end %>
	<tr>
		<td colspan="2">Total</td>
		<td class="text-right"><%= total_pay_u_orders %> </td>
		<td class="text-right"><%= total_pay_u_value %> </td>
		<td class="text-right"> <%= total_ccorders %> </td>
		<td class="text-right"><%= total_ccvalue %> </td>
		<td class="text-right"><%= total_codorders %> </td>
		<td class="text-right"><%= total_codvalue %> </td>
		<td class="text-right"><%= total_nos %> </td>
		<td class="text-right"><%= total_value %> </td>
	</tr>
  </tbody>

  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
 <br>
