 <% title "Product Sold Report #{@from_date} to #{@to_date}" %>
 <div class="row">
	 <div class="col-xs-6">
	 <h4>Products Ordered <%=  @orderdate %> </h4>
     <div class="btn-group" role="group" aria-label="...">
     	<%= link_to 'All', showproducts_sales_report_team_path(show: "all", from_date: @from_date, to_date: @to_date), type:"button", class: @btn1 %>
     	<%= link_to 'HBN', showproducts_sales_report_team_path(show: "hbn", from_date: @from_date, to_date: @to_date), type:"button", class: @btn2 %>
     	<%= link_to 'Pvt', showproducts_sales_report_team_path(show: "pvt", from_date: @from_date, to_date: @to_date), type:"button", class: @btn3 %> 
 	</div>
	 </div>
	 <div class="col-xs-6">
 <%= render partial: 'date_range_search', :locals => {:searchaction => "showproducts"}  %>
	</div>
 </div>
 <br>
 <div class="panel panel-primary">
   <div class="panel-heading"><h3 class="panel-title">Total Orders: <%= @order_masters.count if @order_masters.present? %></h3></div>
   <div class="row">
	   	<div class="col-xs-6">
			<table class="table table-stripped table-hover table-bordered">
				<tr>
					<td>Pay U Money Orders </td>
					<td class="text-right"><%= @order_masters_payu.count if @order_masters_payu.present? %></td>
				</tr>
				<tr>
					<td>Credit Card Orders </td>
					<td class="text-right"><%= @order_masters_cc.count if @order_masters_cc.present? %></td>
				</tr>
				<tr>
					<td>COD Orders </td>
					<td class="text-right"><%= @order_masters_cod.count if @order_masters_cod.present? %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-6">
			<table class="table table-stripped table-hover table-bordered">
				<tr>
					<td>Main Products Sold</td>
					<td class="text-right"><%= @total_main_nos if @total_basic_nos.present? %></td>
				</tr>
				<tr>
					<td>Common Upsell Products</td>
					<td class="text-right"><%= @total_common_nos if @total_basic_nos.present? %></td>
				</tr>
				<tr>
					<td>Basic Upsell Products</td>
					<td class="text-right"><%= @total_basic_nos if @total_basic_nos.present? %></td>
				</tr>
				
			</table>
		</div>
	</div>
	<div class="panel-footer">Upsell is not a regular product and add's up to Common or Basic upsell, because there are some products which are common upsell / which are upgrades which replace the main product in the order</div>
 </div>
 <%= render partial: 'sales_report/product_list', :locals => {:main_product_list => @main_product_list, :list_name => "Main Product", :filter => "main"}  %>
 <hr>
 <%= render partial: 'sales_report/product_list', :locals => {:main_product_list => @basic_product_list_orderlist, :list_name => "Basic Product", :filter => "basic"}  %>
 <hr>
 <%= render partial: 'sales_report/product_list', :locals => {:main_product_list => @common_product_list_orderlist, :list_name => "Common Product", :filter => "common"}  %>
 <hr>
 <div class="well well-sm">
 <div class="row">
   <div class="col-xs-6">
   Download CSV file
   </div>
   <div class="col-xs-6">
     <%= link_to 'Download CSV file', showproducts_sales_report_team_path(show: @show, from_date: @from_date, to_date: @to_date, format: :csv), class: "btn btn-info btn-sm" %>
   </div>
 </div>
 </div>
