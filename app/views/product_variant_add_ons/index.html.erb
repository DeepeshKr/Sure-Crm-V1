<p id="notice"><%= notice %></p>

<h1>Listing Product Variant Add Ons</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Productid</th>
      <th>Productvariantid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variant_add_ons.each do |product_variant_add_on| %>
      <tr>
        <td><%= product_variant_add_on.product_master.name %></td>
        <td><%= product_variant_add_on.product_variant.description%></td>
        <td><%= link_to 'Show', product_variant_add_on %></td>
        <td><%= link_to 'Edit', edit_product_variant_add_on_path(product_variant_add_on) %></td>
        <td><%= link_to 'Destroy', product_variant_add_on, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product variant add on', new_product_variant_add_on_path, class: "btn btn-primary" %>
