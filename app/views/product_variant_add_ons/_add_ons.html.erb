<hr />
<h3><% @productaddonhead %></h3>

<% if @product_add_ons.present? %>

<table class="table table-hover">
  <thead>
    <tr>
       <th>Product</th>
       <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_add_ons.each do |product_variant_add_on| %>
      <tr>
        <td><%= product_variant_add_on.product_variant.name %></td>
        <td><%= product_variant_add_on.product_master.description %></td>
        
       
        <td><%= link_to 'Destroy', product_variant_add_on, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<hr />
