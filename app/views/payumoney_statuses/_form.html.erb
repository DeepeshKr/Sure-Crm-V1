<%= simple_form_for(@payumoney_status) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :priority_no %>
    <%= f.input :external_description %>
    <%= f.input :valid_payment %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
