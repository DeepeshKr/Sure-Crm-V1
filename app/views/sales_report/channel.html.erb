  <% title "Channel Report #{@from_date} to #{@to_date}" %>
  
  <div class="row">
 	 <div class="col-xs-6">
 	 <h4>Channel Sales Report <%=  @orderdate %> </h4>
      <div class="btn-group" role="group" aria-label="...">
      	<%= link_to 'All', product_report_path(show: "all", from_date: @from_date, to_date: @to_date), type:"button", class: @btn1 %>
      	<%= link_to 'HBN', product_report_path(show: "hbn", from_date: @from_date, to_date: @to_date), type:"button", class: @btn2 %>
      	<%= link_to 'Pvt', product_report_path(show: "pvt", from_date: @from_date, to_date: @to_date), type:"button", class: @btn3 %> 
  	</div>
 	 </div>
 	 <div class="col-xs-6">
  <%= render partial: 'date_range_search', :locals => {:searchaction => "channel"}  %>
 	</div>
  </div>
  
 <div class="well well-sm">
<h4><%=  @orderdate %> </h4>
</div>
<h4>HBN Chanels Orders </h4>

<% if @hbn_order_list.present? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
     <th>No</th>
     <th>Channel</th>
     <th>City</th>
     <th>CC Orders</th>
       <th>CC Value</th>
      <th>COD Orders</th>
       <th>COD Value</th>
       <th>Total Orders</th>
     <th>Total Value</th>
    <th>City</th>
     </tr> 
  </thead>
<tbody>
   <% @hbn_order_list.each do |c| %>
   <tr>
   <td><%= @sno %></td>

<td>
 <%=  c[:channel] %>
 
</td>
<td>
 <%=  c[:city] %>
 
</td>
<td class="text-right">
   <%= c[:ccorders] %> 
</td>
<td class="text-right">
   <%= c[:ccvalue] %> 
</td>
<td class="text-right">
   <%= c[:codorders] %> 
</td>
<td class="text-right">
   <%= c[:codvalue] %> 
</td>

<td class="text-right">
   <%= c[:nos] %> 
</td>
<td class="text-right">
   <%= c[:total] %> 
</td>
<td >
   <%= link_to "View Cities", city_report_path(from_date: @from_date, to_date: @to_date, media_id: c[:id]), :target => "_blank" %>
</td>
  </tr> 
  <% @sno += 1 %> 
 <% end %>

 

  </tbody>

  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report or No sales in HBN </h5>
  </div>
  <% end %>
