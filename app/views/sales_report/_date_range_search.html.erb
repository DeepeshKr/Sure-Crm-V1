<div class="row">
  <%= form_tag  url_for(:controller => 'sales_report', :action => @searchaction), method: "get" do  %>
    
      <div class="col-xs-4 col-offset-xs-5">
        <div class="input-daterange input-group">
          <%= text_field_tag(:for_date, nil, :data => {:provide => "datepicker"}, :id => "datepicker_from", :class => "form-control", :required => "true" )   %>
          <span class="input-group-addon">to</span>

           <%= text_field_tag(:to_date, nil, :data => {:provide => "datepicker"}, :id => "datepicker_to", :class => "form-control", :required => "true" )   %>

        </div>
      </div>

      <div class="col-xs-3">
        <%= submit_tag "Show Report", name: nil, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
<script>
$('#sandbox-container .input-daterange').datepicker({
});
$('#datepicker_to').datepicker({format: 'yyyy-mm-dd'});
$('#datepicker_from').datepicker({format: 'yyyy-mm-dd'});
 $(function () {
                $('#datepicker_from').datetimepicker({
                    locale: 'in'
                });
            });
</script>
<script type="text/javascript">
	
	var nowTemp = new Date();
var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);
 
var checkin = $('#datepicker_from').datepicker({
  onRender: function(date) {
    return date.valueOf() < now.valueOf() ? 'disabled' : '';
  }
}).on('changeDate', function(ev) {
  if (ev.date.valueOf() > checkout.date.valueOf()) {
    var newDate = new Date(ev.date)
    newDate.setDate(newDate.getDate() + 1);
    checkout.setValue(newDate);
  }
  checkin.hide();
  $('#datepicker_to')[0].focus();
}).data('datepicker');
var checkout = $('#datepicker_to').datepicker({
  onRender: function(date) {
    return date.valueOf() <= checkin.date.valueOf() ? 'disabled' : '';
  }
}).on('changeDate', function(ev) {
  checkout.hide();
}).data('datepicker');
</script>