<div class="panel panel-primary">
  <div class="panel-heading">
   <h3 class="panel-title">Order Summary</h3>

  </div>



<table class="table table-striped table-bordered">
  <thead>

    <tr>
    <th>SNo</th>
    <th>Id </th>
      <th>Product </th>
      <th>Time</th>
      <th class="text-right">Basic</th>
      <th class="text-right">Shipping</th>
      <th class="text-right">Total</th>
      <th class="text-right">Cost</th>
      <th class="text-right">Revenue</th>

    </tr>
  </thead>

  <tbody>
   <tr>
   <th colspan="9">Main Products </th>

   </tr>
   <% @sno = 1 %>
    <% if @order_lines_regular.present? %>
<!-- Regular Products -->
     <% @order_lines_regular.each do |order_line| %>
      <tr>
       <td><%= @sno %></td>
       <td><%= order_line.order_master.external_order_no %>
         <small><%= order_line.order_master.id %></small>
         <small></small>
       </td>
        <td><%= order_line.description %></td>
       <td><small>
       <%= (order_line.order_master.orderdate + 330.minutes).strftime('%d-%b %H:%M %P') %>
       </small></td>
       <td class="text-right"><%= order_line.subtotal %>  </td></td>
        <td class="text-right">
           <%= order_line.shipping %>    </td>
       <td class="text-right">
        <%= order_line.total %>
       </td>
       <td class="text-right">
          <%= order_line.productcost %>
       </td>

        <td class="text-right">
      <%= order_line.productrevenue.to_i %>
        </td>
      </tr>
      <% @sno += 1 %>
    <% end %>
     <tr>
    <th colspan="4">Total</th>
    <th class="text-right"><%= @regular_basic.to_i %></th>
    <th class="text-right"><%= @regular_shipping.to_i %></th>
    <th class="text-right"><%= @regular_total.to_i %></th>
    <th class="text-right"><%= @regular_cost.to_i %></th>
    <th class="text-right"><%= @regular_revenue.to_i %></th>
    </tr>

    <% end %>
    <tr>
   <th colspan="9">Basic Upsell Products </th>

   </tr>
    <% if @order_lines_basic.present? %>
     <% @sno = 1 %>
    <!-- Basic Upsell Products -->
     <% @order_lines_basic.each do |order_line| %>
       <tr>
        <td><%= @sno %></td>
        <td><%= order_line.order_master.external_order_no %></td>
        <td><%= order_line.description %></td>
       <td><small>
       <%= (order_line.order_master.orderdate + 330.minutes).strftime('%d-%b %H:%M %P') %>
       </small></td>
       <td class="text-right"><%= order_line.subtotal %> </td>
        <td class="text-right"><%= order_line.shipping %> </td>
       <td class="text-right"><%= order_line.total %> </td>
       <td class="text-right"><%= order_line.productcost %> </td>
        <td class="text-right"><%= order_line.productrevenue.to_i %> </td>
      </tr>
       <% @sno += 1 %>
    <% end %>
     <tr>
    <th colspan="4">Total</th>
    <th class="text-right"> <%= @basic_basic.to_i %></th>
    <th class="text-right"><%= @basic_shipping.to_i %></th>
    <th class="text-right"><%= @basic_total.to_i %></th>
    <th class="text-right"><%= @basic_cost.to_i %></th>
    <th class="text-right"><%= @basic_revenue.to_i %></th>
    </tr>
     <% end %>
    <tr>
   <th colspan="9">Common Upsell Products </th>

   </tr>
    <% @sno = 1 %>
    <% if @order_lines_common.present? %>

    <!-- Common Upsell Products -->
     <% @order_lines_common.each do |order_line| %>
       <tr>
        <td><%= @sno %></td>
        <td><%= order_line.order_master.external_order_no %></td>
        <td><%= order_line.description %></td>
       <td><small>
       <%= (order_line.order_master.orderdate + 330.minutes).strftime('%d-%b %H:%M %P') %>
       </small></td>
       <td class="text-right"><%= order_line.subtotal %> </td>
        <td class="text-right">
           <%= order_line.shipping %>    </td>
       <td class="text-right">
        <%= order_line.total %>
       </td>
       <td class="text-right">
          <%= order_line.productcost %>
       </td>

        <td class="text-right">
      <%= order_line.productrevenue.to_i %>

        </td>


      </tr>
       <% @sno += 1 %>
    <% end %>
     <tr>
    <th colspan="4">Total</th>
    <th class="text-right"> <%= @common_basic.to_i %></th>
    <th class="text-right"><%= @common_shipping.to_i %></th>
    <th class="text-right"><%= @common_total.to_i %></th>
    <th class="text-right"><%= @common_cost.to_i %></th>
    <th class="text-right"><%= @common_revenue.to_i %></th>
    </tr>
    <% end %>
  </tbody>
</table>




</div>
