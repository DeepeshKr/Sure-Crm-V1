    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_paid_earnings, :delimiter => ',') %></td>
  </tr>
  <tr>
    <td><strong>Actual</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_actual_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_actual_value, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_actual_earnings, :delimiter => ',') %></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_actual_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_actual_value, :delimiter => ',') %></td>
