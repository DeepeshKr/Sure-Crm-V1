<% if employeesales.present? %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <div class="row">
        <div class="col-xs-8">
         <%= @employee_name %> Report From: <%= employeesales.from_date.strftime("%d-%b-%Y") if employeesales.from_date.present? %> To: <%= employeesales.to_date.strftime("%d-%b-%Y") if employeesales.to_date.present? %>
        </div>
        <div class="col-xs-4">
          <small>Updated <%= employeesales.last_updated_date if employeesales.last_updated_date.present? %></small>
        </div>
      </div>
  </div>

<table class="table table-striped table-hover table-bordered">
  <thead>
     <tr>
        <th rowspan="2">Desc</th>
        <th colspan="3" class="text-center">All</th>
		<th colspan="3" class="text-center">Basic</th>
		<th colspan="3" class="text-center">Upsell</th>
    </tr>
    <tr>
      <th class="text-right">Nos</th>
      <th class="text-right">Value</th>
      <th class="text-right">Earnings</th>
	  
      <th class="text-right">Nos</th>
      <th class="text-right">Value</th>
      <th class="text-right">Earnings</th>
      
	  <th class="text-right">Nos</th>
      <th class="text-right">Value</th>
      <th class="text-right">Earnings</th>
    </tr>
  </thead>
  <% if @show_results == "true" %>
  <tr>
    <td><strong>All Calls</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_value, :delimiter => ',') %></td>
    <td colspan="7">Total Calls received (important to have good conversion, orders are given below)</td>
	
  </tr>
  <tr>
    <td><strong>All Orders</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_processed_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_processed_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_processed_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_processed_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_processed_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_processed_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
  </tr>
    <% if @show_open == "true" %>
  <tr>
    <td><strong>Open Orders</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_open_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_open_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_open_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_open_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_open_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_open_value, :delimiter => ',') %></td>
	<td class="text-right"></td>	
  </tr>
  <% end %>
  <tr>
    <td><strong>Shipped</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_shipped_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_shipped_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_shipped_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_shipped_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_shipped_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_shipped_value, :delimiter => ',') %></td>
	<td class="text-right"></td>	
  </tr>
  <tr>
    <td><strong>Cancelled</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_cancelled_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_cancelled_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_cancelled_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_cancelled_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_cancelled_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_cancelled_value, :delimiter => ',') %></td>
    <td class="text-right"></td>
  </tr>
  <% end %>
  <tr>
    <td><strong>Returned</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_returned_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_returned_value, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_returned_earnings, :delimiter => ',') %></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_returned_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_returned_value, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_returned_earnings, :delimiter => ',') %></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_returned_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_returned_value, :delimiter => ',') %></td>
  	<td class="text-right"><%= number_with_delimiter(employeesales.upsell_returned_earnings, :delimiter => ',') %></td>
  </tr>
  <tr>
    <td><strong>Paid</strong></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_paid_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_paid_value, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.all_paid_earnings, :delimiter => ',') %></td>
	
    <td class="text-right"><%= number_with_delimiter(employeesales.basic_paid_nos, :delimiter => ',') %></td>
