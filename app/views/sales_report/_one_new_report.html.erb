    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_actual_nos, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_actual_value, :delimiter => ',') %></td>
    <td class="text-right"><%= number_with_delimiter(employeesales.upsell_actual_earnings, :delimiter => ',') %></td>
  </tr>
</table>
</div>
<% end %>