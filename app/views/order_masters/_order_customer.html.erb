
<div class="well">
<% if  @order_master.present? %>
<div class="row">
<div class="col-xs-12">
  <small>Customer Id <%= @order_master.customer_id%></small> &nbsp;<small>Order Id <%= @order_master.id %></small>
  &nbsp;<small> <strong>Date:</strong>   <%= @order_master.orderdate + 330.minutes %> </small>
&nbsp;  <small><strong>Employee Id:</strong>   <%= @order_master.employee_id %></small>   
&nbsp; <small><strong>Employee Code:</strong>   <%= @order_master.employeecode %> </small>
&nbsp; <small><strong>Campaign Id:</strong>   <%= @order_master.campaign_playlist_id %> </small>
&nbsp; <small><strong>Completed Order No: <%= @order_master.external_order_no ||= "Not Completed" %> </strong></small>
</div>
</div>
<div class="row">


  <div class="col-xs-6">
   <h3><%= @order_master.customer.fullname  if @order_master.customer %> </h3>
  </div>
  <div class="col-xs-6">
  <div class="row">
    <div class="col-xs-5">
	  <small>DNIS <%= @order_master.calledno %> </small><br/>
      <small> Mobile No <%= @order_master.customer.mobile if @order_master.customer %> | <%= @order_master.customer.alt_mobile if @order_master.customer %></small> 
    </div>
    <div class="col-xs-7">
	<small>Channel <%= @order_master.medium.name if @order_master.medium %> </small> <br/>
    <small> Email Id  <%= @order_master.customer.emailid if @order_master.customer %> | <%= @order_master.customer.alt_emailid if @order_master.customer %></small>
    </div>
  </div>
</div>
</div>
<% else %>
<h4>Please search for an order </h4>

<% end %>
</div>


