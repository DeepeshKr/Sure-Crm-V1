<h1>Listing order_masters</h1>

<table>
  <thead>
    <tr>
      <th>Orderdate</th>
      <th>Employeecode</th>
      <th>Employee</th>
      <th>Customer</th>
      <th>Customer address</th>
      <th>Billno</th>
      <th>External order no</th>
      <th>Pieces</th>
      <th>Subtotal</th>
      <th>Taxes</th>
      <th>Shipping</th>
      <th>Codcharges</th>
      <th>Total</th>
      <th>Order status</th>
      <th>Order payment mode</th>
      <th>Campaign playlist</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_masters.each do |order_master| %>
      <tr>
        <td><%= order_master.orderdate %></td>
        <td><%= order_master.employeecode %></td>
        <td><%= order_master.employee_id %></td>
        <td><%= order_master.customer_id %></td>
        <td><%= order_master.customer_address.state  rescue nil %></td>
        <td><%= order_master.billno %></td>
        <td><%= order_master.external_order_no %></td>
        <td><%= order_master.pieces %></td>
        <td><%= order_master.subtotal %></td>
        <td><%= order_master.taxes %></td>
        <td><%= order_master.shipping %></td>
        <td><%= order_master.codcharges %></td>
        <td><%= order_master.total %></td>
        <td><%= order_master.order_status_master_id %></td>
        <td><%= order_master.orderpaymentmode_id %></td>
        <td><%= order_master.campaign_playlist_id %></td>
        <td><%= order_master.notes %></td>
        <td><%= link_to 'Show', order_master %></td>
        <td><%= link_to 'Edit', edit_order_master_path(order_master) %></td>
        <td><%= link_to 'Destroy', order_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

