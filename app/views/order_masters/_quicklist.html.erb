<% if @order_masters.present? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
    <th>No</th>
    <th>Channel / Show</th>
      <th>Orderdate</th>
      <th>Employee</th>
      <th>Customer / Mobile</th>
      <th>City / State</th>
      <th>Products</th>
      <th>Order no</th>
      <th>Pieces</th>
      <th>Total</th>
      <th>Order status</th>
      <th>Order payment mode</th>
       <th>Time Taken</th>
      
     
    </tr>
  </thead>

  <tbody>
  <% @sno = 1 %> <% totalnos = 0 %> <% totalvalue = 0 %>
    <% @order_masters.each do |order_master| %>
      <tr>
      <td><%= @sno %></td>
      <td><%= order_master.medium.name if order_master.medium %> <br>
      <%= order_master.campaign_playlist.name || "No Show" if order_master.campaign_playlist %>
       </td>
        <td><%= (order_master.orderdate).strftime('%d-%b-%Y') %>
    <small><%= Time.at(order_master.orderdate).strftime('%H:%M %P %Z') %></small>

        </td>
        <td><%= order_master.employee.name if order_master.employee %> 
        <small><strong><%= order_master.employeecode %> </strong></small>
 <small><%= order_master.employee_id %> </small>
        </td>
        <td><%= order_master.customer.first_name rescue nil %> <%= order_master.customer.last_name rescue nil %> <br>
          <%= order_master.mobile %>
        </td>
        <td><%= order_master.customer_address.city  rescue nil %>
        <%= order_master.customer_address.state  rescue nil %></td>
        <td>
          <table>
            <% order_master.order_line.each do |line| %>

            <tr>
              <%= line.description  rescue nil %></td>
            </tr>
            <% end %>
          </table>

        </td>
          <td><strong>
          <%= link_to order_master.external_order_no, custordersearch_path(ordernum: order_master.external_order_no), :target => "_blank" %></strong> <br>
           <small>Ref: <%= order_master.id %></small> 
          </td>
        <td><%= order_master.pieces %></td>
         <td><%= order_master.total %></td>
        <td><%= order_master.order_status_master.name %></td>
        <td><%= order_master.orderpaymentmode.name if order_master.orderpaymentmode %></td>
         <td><small><%= (order_master.timetaken) %> Secs</small>  <br>
         
           
         </td>
       
       
      </tr>
       <% @sno += 1 %>
       <% totalnos += order_master.pieces %> 
       <% totalvalue += order_master.total %>
    <% end %>
  </tbody>
  <tfoot>
   
    <tr>
    <th colspan="8">
    </th>
      <th> <%= totalnos %> </th>
      <th colspan="4"><%= totalvalue %></th>
      
      
     
    </tr>
  

  </tfoot>
</table>
<% else %>
<div class="well well-sm">
<h4>@ordersearch</h4>

</div>
<% end %>