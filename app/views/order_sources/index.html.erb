<h1>Listing order_sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_sources.each do |order_source| %>
      <tr>
        <td><%= order_source.name %></td>
        <td><%= link_to 'Show', order_source %></td>
        <td><%= link_to 'Edit', edit_order_source_path(order_source) %></td>
        <td><%= link_to 'Destroy', order_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

