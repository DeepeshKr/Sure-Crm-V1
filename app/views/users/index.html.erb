<table class="table">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Employee Code</th>
		<th>Role</th>
		<th></th>
	</tr>
	
	<tbody>
    <% @users.each do |u| %>
      <tr>
		<td><%= u.name %></td>
		<td><%= u.email %></td>
		<td><%= u.employee_code %></td>
		<td><%= u.role %></td>
		 <td><%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
       
		</tr>
	<% end %>
	</tbody>
</table>
