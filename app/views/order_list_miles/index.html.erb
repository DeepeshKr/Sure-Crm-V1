<h1>Listing Order List Miles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sort order</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_list_miles.each do |order_list_mile| %>
      <tr>
        <td><%= order_list_mile.name %></td>
        <td><%= order_list_mile.sort_order %></td>
        <td><%= order_list_mile.description %></td>
        <td><%= link_to 'Show', order_list_mile %></td>
        <td><%= link_to 'Edit', edit_order_list_mile_path(order_list_mile) %></td>
        <td><%= link_to 'Destroy', order_list_mile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

