      <%= @daily_charge %> x <%= @days %> <br>
     
      <% if @revised_media_total_fixed_cost.present? %>
      <strong>Revised Media Cost <%= @revised_media_total_fixed_cost.round(0)  %></strong><br>
      <%= @revised_per_day_rate %> x <%= @days %>
      <% end %>
  </div>
  <div class="col-xs-3">
    <h4>Expense</h4>
      <strong>Total Product Cost <%= @total_product_cost_2.round(0) if @total_product_cost_2 %></strong><br>
      <strong>Total variable Cost <%= @total_var_cost_2.round(0) if @total_var_cost_2 %></strong><br>
      <strong>Total Refund <%= @total_refund_2.round(0) if @total_refund_2 %></strong><br>
      <strong>Total Damages <%= @total_product_dam_cost_2.round(0) if @total_product_dam_cost_2 %></strong>
      <% @total_expenses_2 = (@total_product_cost_2 ||= 0) + (@total_var_cost_2 ||= 0) + (@total_refund_2 ||= 0) + (@total_product_dam_cost_2 ||= 0).round(0) %>
  </div>
   <div class="col-xs-2">
      <% if @total_nos_2 > 0 %>
   
      <h4>Original PPO</h4>
      Profitability :<%= ((@total_revenue_2 || 0) - ((@total_expenses_2 || 0) + (@media_total_fixed_cost || 0))).round(0) %><br>
      Total Orders  :<%= @total_nos_2.round(0) %> <br>
      PPO           :<%= (((@total_revenue_2 || 0) - ((@total_expenses_2 || 0) + (@media_total_fixed_cost || 0))) / (@total_nos_2 || 1)).round(0) %>
   </div>
   <div class="col-xs-3">
      <h4>Revised PPO</h4>
      <% if @revised_media_total_fixed_cost.present? %>
      Profitability :<%= @total_revenue_2.round(0) - (@total_expenses_2.round(0) + @revised_media_total_fixed_cost.round(0)) %><br>
      Total Orders  :<%= @total_nos_2.round(0) %> <br>
      PPO           :<%= ((@total_revenue_2 - (@total_expenses_2 + @revised_media_total_fixed_cost)) / @total_nos_2).round(0) %>
      <% end %>
 

      <small>PPO formula = (Total Revenue - Total Cost) / Total Orders </small>

      <% end %>
   </div>
</div>
</div>

