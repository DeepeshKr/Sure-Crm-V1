<h1>Listing Sales Ppos</h1>

<table>
  <thead>
    <tr>
      <th>Campaign playlist</th>
      <th>Campaign</th>
      <th>Product master</th>
      <th>Product variant</th>
      <th>Product list</th>
      <th>Prod</th>
      <th>Name</th>
      <th>Start time</th>
      <th>Order</th>
      <th>Order line</th>
      <th>Product cost</th>
      <th>Pieces</th>
      <th>Revenue</th>
      <th>Damages</th>
      <th>Returns</th>
      <th>Commission cost</th>
      <th>Promotion cost</th>
      <th>Media cost</th>
      <th>Gross sales</th>
      <th>Net sale</th>
      <th>External order no</th>
