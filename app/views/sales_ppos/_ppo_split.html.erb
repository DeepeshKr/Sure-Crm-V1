		<td class="text-right"><%= @total_fixed_cost.to_i %></td>
		<td class="text-right"><%= @total_fixed_cost_60.to_i %></td>
		<td class="text-right"><%= @total_fixed_cost_50.to_i %></td>
		<td class="text-right"><%= @total_fixed_cost_40.to_i %></td>
