		<td>Commission</td>
		<td class="text-right"><%= @total_var_cost.to_i %></td>
		<td class="text-right"><%= @total_var_cost_60.to_i %></td>
		<td class="text-right"><%= @total_var_cost_50.to_i %></td>
		<td class="text-right"><%= @total_var_cost_40.to_i %></td>
		</tr>

		<tr>
