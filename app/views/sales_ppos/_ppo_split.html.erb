		<td class="text-right"><strong><%= @total_cost_per_order_40.to_i %></strong></td>
		</tr>
		<tr>
		<td>Cost Per Order</td>
		<td class="text-right"><%= @cost_per_order.to_i %></td>
		<td class="text-right"><%= @cost_per_order_60.to_i %></td>
		<td class="text-right"><%= @cost_per_order_50.to_i %></td>
		<td class="text-right"><%= @cost_per_order_40.to_i %></td>
		</tr>
    <tr>
		<td>Total Profit</td>
		<td class="text-right"><%= @total_profit.to_i %></td>
		<td class="text-right"><%= @total_profit_60.to_i %></td>
		<td class="text-right"><%= @total_profit_50.to_i %></td>
		<td class="text-right"><%= @total_profit_40.to_i %></td>
		</tr>
		<tr>
		<td><strong>Profit Per Order</strong></td>
		<td class="text-right"><strong><%= @profit_per_order.to_i %></strong></td>
		<td class="text-right"><strong><%= @profit_per_order_60.to_i %></strong></td>
		<td class="text-right"><strong><%= @profit_per_order_50.to_i %></strong></td>
