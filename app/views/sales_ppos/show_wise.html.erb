<!-- set page title start -->
<% title @page_heading  %>
<!-- set page title end -->
 <div class="row">
	 <div class="col-xs-6">

	 <h4>HBN Daily Show PPO Report <%= @or_for_date %> </h4>
	 </div>
	 <div class="col-xs-6">
	 	<%= render partial: 'date_search', :locals => {:searchaction => "show"}  %>
	</div>
</div>

<br>
<%= render partial: 'row_of_ppo' %>

<br>
<div class="well well-sm">
<ul class="list-inline">
  <li>* The pieces are including upsell</li>
  <li>ppo = (revenue - (product_cost + fixed_cost + product_damages + media_var_cost + refund))</li>
</ul>
</div>

<div class="well well-sm">
<div class="row">
  <div class="col-xs-2">
  Total Media Cost - Including Active and Inactive <%= @total_media_cost.round(0) if @total_media_cost.present? %>
  </div>
  <div class="col-xs-2">
  HBN Media Cost -We use only Active <%= @hbn_media_cost.round(0) if @hbn_media_cost.present? %>
  </div>
  <div class="col-xs-2">
  This Campaign Cost <%= @total_fixed_cost.round(0) if @total_fixed_cost.present? %>
  </div>
  <div class="col-xs-3">
  Download CSV file
  </div>
  <div class="col-xs-3">

	<%= link_to "Download CSV file", { :controller => :sales_ppos, :action => :show_wise, :from_date => @or_for_date , format: :csv }, class: "btn btn-info btn-sm" %>
  </div>
</div>
</div>
