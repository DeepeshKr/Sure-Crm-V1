<!-- set page title start -->
<% title @page_heading  %>
<!-- set page title end -->
 <div class="row">
	 <div class="col-xs-6">

	 <h4>HBN Daily Show PPO Report <%= @or_for_date %> </h4>
	 </div>
	 <div class="col-xs-6">
	 	<%= render partial: 'date_search', :locals => {:searchaction => "show"}  %>
	</div>
</div>

 <br>
 <% if @employeeorderlist.present? %>

<div class="row fixed-table">
  <div class="table-content">
	  <table class="table table-hover table-bordered table-striped">
  		<thead class="header">
     <tr>
     	<th rowspan="2">No</th>
     	<th rowspan="2" style="width:">Show</th>
	   	<th rowspan="2">Name</th>
        <th colspan="3">Income</th>
        <th rowspan="2" class="text-right">Revenue</th>
        <th colspan="5">Expense</th>
       	<th rowspan="2">PPO </th>
      	<th>More </th>
     </tr>
     <tr>	
        <th class="text-right">Orders</th>
        <th class="text-right">Pieces*</th>
       	<th class="text-right">Sales</th>
        <th class="text-right">Product Cost</th>
        <th class="text-right">Commision</th>
       	<th class="text-right">Media Cost</th>
        <th class="text-right">Refund</th>
        <th class="text-right">Damages</th>
       </tr>
    </thead>
<tbody>
	<% @sno = 1 %>
   <% @employeeorderlist.each do |c| %>
   <tr>
	   <td rowspan="2"><%= @sno %></td>

	 	<td rowspan="2"><%= c.show %> <small> Id: <%= c.campaign_playlist_id %> </small><br>
		 <% if c.product_cost == 0 %>
		<span style="color:red">No Product Cost Found</span>
		<% else %>
		<span style="color:green"> Cost Rs: <%= c.product_cost %></span>
		<% end %>
		<small><%= link_to "Cost Details", productcost_path(search: c.prod), :target => "_blank", class: "btn btn-primary btn-xs" %> </small> 
		<br>
		Time: <%= c.show_time %>
		<small>Desc: <%= c.description %> </small>
		</td>
		<td title="Name"><small><%= c.total_name_1 %> </small> </td>
		<td class="text-right" title="Orders"> <%= c.total_nos_1 %> </td>
		<td class="text-right" title="Pieces"> <%= c.total_pieces_1 %>  </td>
		<td class="text-right" title="Sales">   <%= c.total_sales_1 %>   </td>
		<td class="text-right" title="Revenue">   <%= c.total_revenue_1 %>  </td>
		<td class="text-right" title="Product Cost">   <%= c.total_product_cost_1 %>   </td>
		<td class="text-right" title="Variable Cost">   <%= c.total_var_cost_1 %>  </td>
		<td class="text-right" title="Fixed Media Cost"> <%= c.total_fixed_cost_1 %>   </td>
		<td class="text-right" title="Refunds"> <%= c.total_refund_1 %>   </td>
		<td class="text-right" title="Damages"> <%= c.total_product_dam_cost_1 %>   </td>
		<td class="text-right" title="Profitability">   <%= c.profit_per_order_1 %>  </td>
		<td rowspan="2">
			<%= link_to "Old", ppo_products_path(campaign_id: c.campaign_playlist_id), :target => "_blank", class: "btn btn-primary btn-xs"  %>
			<hr>
			<%= link_to "New", {:controller => :sales_ppos, :action => :details, campaign_id: c.campaign_playlist_id}, :target => "_blank", class: "btn btn-info btn-xs" %>
		</td>
	</tr>

<!-- second -->
	<tr>
		<td title="Name"><small><%= c.total_name_2 %></small></td>
		<td class="text-right" title="Orders"> <%= c.total_nos_2 %>  </td>
		<td class="text-right" title="Pieces"> <%= c.total_pieces_2 %>   </td>
		<td class="text-right" title="Sales">   <%= c.total_sales_2 %>    </td>
		<td class="text-right" title="Revenue">   <%= c.total_revenue_2 %>    </td>
		<td class="text-right" title="Product Cost">   <%= c.total_product_cost_2 %>    </td>
		<td class="text-right" title="Variable Cost">   <%= c.total_var_cost_2 %>   </td>
		<td class="text-right" title="Fixed Media Cost"> <%= c.total_fixed_cost_2 %>     </td>
		<td class="text-right" title="Refunds"> <%= c.total_refund_2 %>   </td>
		<td class="text-right" title="Damages"> <%= c.total_product_dam_cost_2 %>   </td>
		<td class="text-right" title="Profitability">   <%= c.profit_per_order_2 %>  </td>

	</tr>
  <% @sno += 1 %>
 <% end %>
  </tbody>
 </table>
  </div>
 </div>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
 <br>
<% @hidelist = true %>
<% if @hidelist == false %>
<div style="visibility:hidden">

<%= link_to "Old Details", ppo_details_path(start_time: @from_date, end_time: @to_date, product_variant: c[:product_variant_id]), :target => "_blank" %>
<hr>
<%= link_to "New Details", {:controller => :sales_ppos, :action => :details, start_time: @from_date, end_time: @to_date, product_variant: c[:product_variant_id]},{ class: "btn btn-info btn-xs"}, :target => "_blank" %>

<% @order_sno = 1 %>
<table class="table table-bordered">
  <tr>
    <td>Order No</td> <td>Date Time</td>

  </tr>
 <% @list_of_orders.each do |c| %>
<tr>
<td> <%= @order_sno %></td>
<td> <%= c[:order_no] %></td>
<td> <%= c[:time_of_order] %></td>
</tr>
<% @order_sno += 1 %></td>
</tr>
 <% end -%>
</table>
</div>
<%= link_to "Details", ppo_details_path(for_date: @or_for_date, product_variant: c[:product_variant_id]), :target => "_blank" %>
<% end %>


<div class="well well-sm">
<ul class="list-inline">
  <li>* The pieces are including upsell</li>
  <li>ppo = (revenue - (product_cost + fixed_cost + product_damages + media_var_cost + refund))</li>
</ul>
</div>

<div class="well well-sm">
<div class="row">
  <div class="col-xs-2">
  Total Media Cost - Including Active and Inactive <%= @total_media_cost.round(0) %>
  </div>
  <div class="col-xs-2">
  HBN Media Cost -We use only Active <%= @hbn_media_cost.round(0) %>
  </div>
  <div class="col-xs-2">
  This Campaign Cost <%= @total_fixed_cost.round(0) %>
  </div>
  <div class="col-xs-3">
  Download CSV file
  </div>
  <div class="col-xs-3">

	<%= link_to "Download CSV file", { :controller => :sales_ppos, :action => :show_wise, :from_date => @or_for_date , format: :csv }, class: "btn btn-info btn-sm" %>
  </div>
</div>
</div>
