<!-- set page title start -->
<% title "HBN Product Orders various Time #{@timenow}" %>
<!-- set page title end -->
<div class="row">
 <div class="col-xs-12">
	 <h4>Simulate HBN Product Orders various Time</h4>
 </div>
</div>
<!-- filters here -->
<div class="panel panel-success">
  <div class="panel-heading"><h3 class="panel-title">You can simulate the ppo with estimated values - this wont change the values stored </h3></div>
  
  	<div class="panel-body"> <!-- start panel body -->
		  <!-- filters here -->
	  	<%= form_tag  url_for(:controller => 'sales_ppos', :action => "simulate_product_performance"), method: "get" do  %>
	
		<div class="row">
		    <div class="col-xs-9">
		           <%= select_tag :product_variant_id, options_from_collection_for_select(@product_variants, :id, :productinfo, :selected => @product_variant_id), {:class => "form-control",  :required => true} %>

		    </div>
			<div class="col-xs-1">
				For Date
			</div>
		        <div class="col-xs-2">
		        
		            <%= text_field_tag(:from_date, @from_date, :data => {:provide => "datepicker"}, :id => "datepicker_from", :class => "form-control", :required => "true" )   %>
		            
		        </div>
				
		</div>
	  	<div class="row">
			<div class="col-xs-2">Retail Sales (nos)</div>
			<div class="col-xs-1"><%= text_field_tag :sim_retail_sales_pieces, @sim_retail_sales_pieces, :class => "form-control", :placeholder => "Retail Sales", :required => true %></div>
			<div class="col-xs-2">Transfer Sale (nos)</div>
			<div class="col-xs-1"><%= text_field_tag :sim_to_sales_pieces, @sim_to_sales_pieces, :class => "form-control", :placeholder => "Transfer Sales", :required => true %></div>
			
		<div class="col-xs-1">Basic</div>
		<div class="col-xs-2"><%= text_field_tag :sim_product_basic, @sim_product_basic, :class => "form-control", :placeholder => "Basic", :required => true %></div>
		<div class="col-xs-1">Shipping</div>
		<div class="col-xs-2"><%= text_field_tag :sim_product_shipping, @sim_product_shipping, :class => "form-control", :placeholder => "Shipping", :required => true %></div>
	</div>
	<div class="row">	
		<div class="col-xs-1">Product Cost</div>
		<div class="col-xs-2"><%= text_field_tag :sim_product_cost, @sim_product_cost, :class => "form-control", :placeholder => "Product Cost", :required => true %></div>
		<div class="col-xs-1">Retail %</div>
		<div class="col-xs-1"><%= text_field_tag :retail_default, @retail_default, :class => "form-control", :placeholder => "Retail Default", :required => true %></div>
		<div class="col-xs-1">Transfer %</div>
		<div class="col-xs-1"><%= text_field_tag :transfer_default, @transfer_default, :class => "form-control", :placeholder => "Transfer Default", :required => true %></div>
		<div class="col-xs-1">Postage</div>
		<div class="col-xs-2"><%= text_field_tag :sim_product_postage, @sim_product_postage, :class => "form-control", :placeholder => "Postage", :required => true %>
		 </div>
	</div>
 	<div class="row">	
 			<div class="col-xs-1">Transfer Paid Commission</div>
 			<div class="col-xs-2"><%= text_field_tag :transfer_total_on_paid_commission_cost, @transfer_total_on_paid_commission_cost, :class => "form-control", :placeholder => "Transfer Paid Commission", :required => true %></div>
 			<div class="col-xs-1">Retail Paid Commission</div>
 			<div class="col-xs-2"><%= text_field_tag :retail_total_on_paid_commission_cost, @retail_total_on_paid_commission_cost, :class => "form-control", :placeholder => "Retail Paid Commission", :required => true %></div>
 			<div class="col-xs-1">Transfer Order Commission</div>
 			<div class="col-xs-2"><%= text_field_tag :transfer_total_order_commission, @transfer_total_order_commission, :class => "form-control", :placeholder => "Transfer Order Commission", :required => true %></div>
		 			<div class="col-xs-1">Retail Order Commission</div>
		 			<div class="col-xs-2"><%= text_field_tag :retail_total_order_commission, @retail_total_order_commission, :class => "form-control", :placeholder => "Retail Order Commission", :required => true %></div>
 		 </div>
		 <div class="row">	
			 
			 <div class="col-xs-2 col-xs-offset-10"><%= submit_tag "Show", name: nil, class: "btn btn-info btn-sm" %></div>
		 </div>
	   <% end %>
	</div> <!-- end panel body -->
</div>
