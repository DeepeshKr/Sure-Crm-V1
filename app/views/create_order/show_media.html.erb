<%= bootstrap_form_for @order_master , url: addmedia_path, :method => :POST do |f| %>

 <%= hidden_field_tag :order_id, @order_master.id %>

   <%= render 'customer_details' %>
<div class="row">
  
        <div class="col-xs-8">
       
                  <div class="row">
                    <div class="col-xs-1"> </div>
                     <div class="col-xs-4">
                    	  <%= f.text_field :calledno,  :class =>"form-control", :readonly => "true" %>
                    </div>
                    
                   
                    <div class="col-xs-4">
                    	 <%= f.select(:media_id, 
                  		    options_from_collection_for_select(@medialist, :id, :name), 
                  		      {}, :class => "form-control") %>
                    
                    </div>
                    <div class="col-xs-2">
                    	
                    </div>
                  </div>

              <div class="clearfix"></div>
              <% unless @all_calllist.empty?  %>
                      	<div class="row">
                      	     <div class="col-xs-1"> </div>
                       		   <div class="col-xs-8">  
                      		    <%= f.select(:campaign_playlist_id, 
                      		    options_from_collection_for_select(@all_calllist, :id, :playlistinfo), 
                      		    {}, :class => "form-control") %>
                      		  </div>
                        </div> 	
              <div class="clearfix"></div>

	<div class="row">	 			
  			<div class="col-xs-11">
        <div class="col-xs-1"> </div>
      			   <div class="col-xs-2">
                  <label class="radio"> 
                            <%= label_tag(:mismatched_campaign, "All Ok") %>
                            <%= radio_button_tag(:mismatched_campaign, "0", checked = true) %>
                  </label>
                </div>
                <div class="col-xs-2">
                  <label class="radio">
                          <%= label_tag(:mismatched_campaign_1, "Old ad") %>
                  <%= radio_button_tag(:mismatched_campaign, "1") %>
                  </label>
                </div>
                <div class="col-xs-2">
                  <label class="radio">
                    <%= label_tag(:mismatched_campaign_2, "Different ad") %>
                    <%= radio_button_tag(:mismatched_campaign, "2") %>
                  </label>          
                </div>

        </div>
  			<div class="clearfix"></div>
  			<div class="col-xs-1"> </div>
  			<div id="customer_comment" class="col-xs-8 col-offset-xs-2">
  				<!--  <%= text_area_tag(:comments)  %> -->
  				 <textarea class = "form-control" id="comments" placeholder="Details as what customer has mentioned, along with your observation" name="comments"></textarea>
  			</div>
  			</div>
  		
<% end %>
<div class="clearfix"></div>

<div class="row">
  	  <div class="col-xs-2 col-xs-offset-8">
  	  	<%= f.submit "Add Media",  class: "btn btn-primary" %>
  	  </div>
    
</div>


<div class="clearfix"></div>

 </div>

 <div class="col-xs-4">
          <div class="panel panel-default">
              <div class="panel-heading">
              <h3 class="panel-title">Product Script</h3>
              </div>
              <div  class="panel-body">
                  <div id="product-script-id">
                
                  </div>
                  <div id="product-script">
                
                  </div>
            </div>
          </div><!-- panel end -->
        </div>  
<% end %>

</div>
<script>
  

$(document).ready(function () {
    $("#customer_comment").hide();
    $("#mismatched_campaign_0").click(function () {
        $("#customer_comment").hide();
    });
    $("#mismatched_campaign_1").click(function () {
        $("#customer_comment").show();
    });
    $("#mismatched_campaign_2").click(function () {
        $("#customer_comment").show();
    });
});
  	
 
  </script>