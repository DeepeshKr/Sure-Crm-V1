    <br>
       <!-- show process buttons -->

        <div class="row">
          
          <% if @show_process == 0 %>
          <div class="col-xs-4 col-xs-offset-8"> 
              <%= bootstrap_form_for @order_master , url: orderprocess_path, method: :post do |f| %>
                <%= f.hidden_field :id %>
                <%= hidden_field_tag :order_id, @order_master.id %>
               <%= f.submit "Process Order", class: "btn btn-success btn-lg" %>
              <% end %>
             </div>

             <% else %>
             <div class="alert alert-warning" role="alert">Please resolve the problems before you can process the order!</div>
          <% end %>
         
        </div>
