
   <%= render 'customer_details' %>
 <div class="row">
        
          <div class="col-xs-2 col-xs-offset-8">
                 
                    <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal">Edit Customer Name</button>
                  
          </div>
          </div>
<br>
<div class="row">
   <div class="col-xs-8">
                     <div class="clearfix"></div>     
       <%= render 'orderlines' %>

      <%= render 'show_order_address' %>

        <div class="clearfix"></div>
         
<br>
   <div class="clearfix"></div>
    
       <!-- show all buttons -->
       
     
        <div class="row">
  <div class="col-xs-3"><%= link_to 'Add / Remove Products', showproducts_path(:order_id => @order_id), class: "btn btn-primary btn-sm" %> </div>
  <div class="col-xs-2"> 
  <%= link_to 'Add Address', showaddress_path(:order_id => @order_id), class: "btn btn-primary btn-sm" %>
  </div>
  <div class="col-xs-2">
  <%= link_to "Add Up Sell's", showaddonproducts_path(:order_id => @order_id), class: "btn btn-info btn-sm" %>
   </div>
  <div class="col-xs-2"> 
  <%= link_to 'Add Payments', showpayment_path(:order_id => @order_id), class: "btn btn-info btn-sm" %></div>

  <div class="col-xs-2"> 
  <%= link_to 'Add Media & Campaign', showmedia_path(:order_id => @order_id), class: "btn btn-info btn-sm" %></div>




  </div>  
   <div class="clearfix"></div>
    <br>
       <!-- show process buttons -->

        <div class="row">
          
          <% if @show_process == 0 %>
          <div class="col-xs-4 col-xs-offset-8"> 
              <%= bootstrap_form_for @order_master , url: orderprocess_path, method: :post do |f| %>
                <%= f.hidden_field :id %>
                <%= hidden_field_tag :order_id, @order_master.id %>
               <%= f.submit "Process Order", class: "btn btn-success btn-lg" %>
              <% end %>
             </div>

             <% else %>
             <div class="alert alert-warning" role="alert">Please resolve the problems before you can process the order!</div>
          <% end %>
         
        </div>
     <div class="clearfix"></div>
      </div><!-- left panel end -->

        <div class="col-xs-4">
          <div class="panel panel-default">
              <div class="panel-heading">
              <h3 class="panel-title">Page Script</h3>
              </div>
              <div  class="panel-body">
                  <div id="product-script-id">
                
                  </div>
                  <div id="product-script">
                
                  </div>
            </div>
          </div><!-- panel end -->
        </div>  
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Customer name</h4>
      </div>
      <div class="modal-body">
           <%= render 'customername' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       <!--  <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>