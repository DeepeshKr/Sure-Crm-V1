
<% if @customer_address.present? %>
<div class="panel panel-info">
  <div class="panel-heading">   <h3 class="panel-title">Customer Address</h3>  </div>
    <div class="panel-body">
  
  <div class="row">
      
     <div class="col-xs-10"> <%= @customer_address.address1 %> </div>
  <div class="clearfix"></div>
     <div class="col-xs-10"><%= @customer_address.address2 %>      </div>
    <div class="clearfix"></div>
     <div class="col-xs-10">      <%= @customer_address.address3 %>     </div>
   <div class="clearfix"></div>
 <div class="col-xs-8">   <%= @customer_address.landmark %>  </div>
   <div class="clearfix"></div>
   <div class="col-xs-3">    <%= @customer_address.district %>  </div>
   <div class="col-xs-3">    <%= @customer_address.city %>  </div>
    <div class="col-xs-2">     <%= @customer_address.pincode %>  </div>
     <div class="col-xs-3">     <%= @customer_address.state %>  </div>
<div class="clearfix"></div>

  <div class="col-xs-4">   <%= @customer_address.country %>  </div>
<div class="clearfix"></div>
       <div class="col-xs-4">      <%= @customer_address.telephone1 %>
     
    </div>
    
    <div class="col-xs-4">
      <%= @customer_address.telephone2 %>
   
    </div>
    
    <div class="col-xs-4">
      <%= @customer_address.fax %>
   
    </div>
  </div>
   
  

</div>
</div>
<% else %>
<div class="alert alert-danger" role="alert">
<h4> No address found </h4>
</div>


<% end %>