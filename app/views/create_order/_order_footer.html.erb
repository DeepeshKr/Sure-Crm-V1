<div class="row">
	

	<div class="col-xs-6">
	<div class="panel panel-default">
  <!-- Default panel contents -->
  
			  
			  <!-- List group -->
			  <ul class="list-group">
			    <li class="list-group-item"><strong>Pieces:</strong> <%= @order_master.pieces %></li>
			    <li class="list-group-item"><strong>Order Status:</strong> <%= @order_master.order_status_master.name  if @order_master.order_status_master %></li>
			    <li class="list-group-item"><strong>Payment mode:</strong> <%= @order_master.orderpaymentmode.name if @order_master.orderpaymentmode %> </li>
			   
			  </ul>
		</div>
   
   
	</div>

<div class="col-xs-6">
		<div class="panel panel-default">
		  <!-- Default panel contents -->
		  <!-- Table -->
		  		<table class="table table-hover">
				<tr><td> <strong>Basic Price:</strong>   </td>	
				<td class="text-right"> <%= @order_master.subtotal %></td>	</tr>
				<tr><td><strong>Shipping:</strong>  </td>
				<td class="text-right">
				<small>(<%= @order_master.shipping %>)</small> 
				<%= @order_master.subtotal + @order_master.shipping  %>
				</td> 
				</tr>
				<tr><td> <strong>Cod charges:</strong></td><td class="text-right"> 
				<small>(<%= @order_master.codcharges %>)</small>
				<% if @order_master.codcharges != 0 %>
				 <%= @order_master.subtotal + @order_master.shipping + @order_master.codcharges %>
				<% end %>
				</td> </tr>
				<tr><td> <strong>Credit Card Savings:</strong></td><td class="text-right"> 
				<small>(<%= @order_master.creditcardcharges %>)</small>
				<% if @order_master.creditcardcharges != 0 %>
				 <%= @order_master.subtotal + @order_master.shipping + @order_master.creditcardcharges %>
				 	<% end %>
				</td> </tr>
				<tr><td> <strong>Maharashtra Surcharge:</strong></td><td class="text-right"> 
			<small>(<%= @order_master.maharastraextra %>)</small>	
			<% if @order_master.maharastraextra != 0 %>
 			<%= @order_master.subtotal + @order_master.shipping + @order_master.codcharges + @order_master.creditcardcharges + @order_master.maharastraextra %>
 				<% end %>
			</td> </tr>
				
				</table>  
		</div>

</div>
</div>
<div class="clearfix"></div>
<div class="well well-sm">
<div class="row">
<div class="col-xs-1">
<strong>Notes:</strong>
</div>
		<div class="col-xs-10">
		 
		  <%= @order_master.notes %>
		</div>

</div>
</div>
<div class="clearfix"></div>