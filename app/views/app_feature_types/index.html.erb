<!-- set page title start -->
<% title "App Feature Comments" %>
<!-- set page title end -->
<p id="notice"><%= notice %></p>

<h1>App Feature Types</h1>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority no</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_feature_types.each do |app_feature_type| %>
      <tr>
        <td><%= app_feature_type.name %></td>
        <td><%= app_feature_type.priority_no %></td>
        <td><%= app_feature_type.description %></td>
        <td><%= link_to 'Show', app_feature_type %></td>
        <td><%= link_to 'Edit', edit_app_feature_type_path(app_feature_type) %></td>
        <td><%= link_to 'Destroy', app_feature_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App feature type', new_app_feature_type_path %>
