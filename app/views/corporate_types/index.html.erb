<p id="notice"><%= notice %></p>

<h3>All Distributor Types</h3>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>No Of</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @corporate_types.each do |corporate_type| %>
      <tr>
        <td><%= corporate_type.name %></td>
        <td><%= corporate_type.no_of_corporates %></td>
        <td><%= corporate_type.description %></td>
        <td><%= link_to 'Show', corporate_type %></td>
        <td><%= link_to 'Edit', edit_corporate_type_path(corporate_type) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Corporate type', new_corporate_type_path, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
