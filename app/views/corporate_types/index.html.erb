<h1>Listing Corporate Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corporate_types.each do |corporate_type| %>
      <tr>
        <td><%= corporate_type.name %></td>
        <td><%= corporate_type.description %></td>
        <td><%= link_to 'Show', corporate_type %></td>
        <td><%= link_to 'Edit', edit_corporate_type_path(corporate_type) %></td>
        <td><%= link_to 'Destroy', corporate_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

