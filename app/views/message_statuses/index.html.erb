<p id="notice"><%= notice %></p>

<h1>Listing Message Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Sort order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_statuses.each do |message_status| %>
      <tr>
        <td><%= message_status.name %></td>
        <td><%= message_status.description %></td>
        <td><%= message_status.sort_order %></td>
        <td><%= link_to 'Show', message_status %></td>
        <td><%= link_to 'Edit', edit_message_status_path(message_status) %></td>
        <td><%= link_to 'Destroy', message_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

