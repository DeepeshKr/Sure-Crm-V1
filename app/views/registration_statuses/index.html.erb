<p id="notice"><%= notice %></p>

<h1>Listing Registration Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Sort order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registration_statuses.each do |registration_status| %>
      <tr>
        <td><%= registration_status.name %></td>
        <td><%= registration_status.description %></td>
        <td><%= registration_status.sort_order %></td>
        <td><%= link_to 'Show', registration_status %></td>
        <td><%= link_to 'Edit', edit_registration_status_path(registration_status) %></td>
        <td><%= link_to 'Destroy', registration_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

