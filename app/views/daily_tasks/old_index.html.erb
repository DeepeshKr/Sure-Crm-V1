<p id="notice"><%= notice %></p>

<h1>Listing Daily Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Sort order</th>
      <th>Name</th>
      <th>Frequency</th>
      <th>Description</th>
      <th>Syntax</th>
      <th>Parameters</th>
      <th>Status</th>
      <th>Department</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_tasks.each do |daily_task| %>
      <tr>
        <td><%= daily_task.sort_order %></td>
        <td><%= daily_task.name %></td>
        <td><%= daily_task.frequency %></td>
        <td><%= daily_task.description %></td>
        <td><%= daily_task.syntax %></td>
        <td><%= daily_task.parameters %></td>
        <td><%= daily_task.status %></td>
        <td><%= daily_task.department %></td>
        <td><%= daily_task.manager %></td>
        <td><%= link_to 'Show', daily_task %></td>
        <td><%= link_to 'Edit', edit_daily_task_path(daily_task) %></td>
        <td><%= link_to 'Destroy', daily_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

