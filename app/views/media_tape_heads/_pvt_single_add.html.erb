	<div class="text-right">
		<div class="col-xs-8">
			 <%=  select_tag "media_tape_type_id",options_from_collection_for_select(@media_cost_master, :id,  :media_tape_type, selected: @campaign.mediumid) , {:class => "form-control",:label => "Select tape", include_blank: 'Select Relevant Cost and Time'} %>
