<h1>Listing change_log_trails</h1>

<table>
  <thead>
    <tr>
      <th>Changelogtype</th>
      <th>Refid</th>
      <th>Name</th>
      <th>Description</th>
      <th>Username</th>
      <th>Ip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @change_log_trails.each do |change_log_trail| %>
      <tr>
        <td><%= change_log_trail.changelogtype_id %></td>
        <td><%= change_log_trail.refid %></td>
        <td><%= change_log_trail.name %></td>
        <td><%= change_log_trail.description %></td>
        <td><%= change_log_trail.username %></td>
        <td><%= change_log_trail.ip %></td>
        <td><%= link_to 'Show', change_log_trail %></td>
        <td><%= link_to 'Edit', edit_change_log_trail_path(change_log_trail) %></td>
        <td><%= link_to 'Destroy', change_log_trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Change log trail', new_change_log_trail_path %>
