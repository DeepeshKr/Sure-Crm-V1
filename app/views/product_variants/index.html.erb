<div class="row">
    <div class="col-xs-6"><h3><%= @search %> <%= @found %>  </h3>    </div>
    <div class="col-xs-6"> <%= render 'search' %></div>
</div>
<hr>
<br>


<table class="table table-hover" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Product Master</th>
      <th>Variant code</th>
      <th>Price</th>
      <th>Taxes</th>
      <th>Total</th>
      <th>Ext product code</th>
     <th>Sell Type</th>
      <th>Activeid</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variants.each do |product_variant| %>
      <tr>
        <td><%= product_variant.name %></td>
        <td><%= product_variant.product_master.productname if product_variant.product_master%></td>
        <td><%= product_variant.variantbarcode %></td>
        <td><%= product_variant.price %></td>
        <td><%= product_variant.taxes %></td>
        <td><%= product_variant.total %></td>
        <td><%= product_variant.extproductcode %></td>
       <td> <%= product_variant.product_sell_type.name if product_variant.product_sell_type %> </td>
        <td><%= product_variant.product_master.product_active_code.name if product_variant.product_master.product_active_code %></td>
        <td><%= link_to 'Show', product_variant, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_product_variant_path(product_variant), class: "btn btn-info btn-xs" %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
