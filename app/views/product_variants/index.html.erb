<h4>Product variants</h4>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Productmasterid</th>
      <th>Variantbarcode</th>
      <th>Price</th>
      <th>Taxes</th>
      <th>Total</th>
      <th>Extproductcode</th>
      <th>Description</th>
      <th>Activeid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variants.each do |product_variant| %>
      <tr>
        <td><%= product_variant.name %></td>
        <td><%= product_variant.productmasterid %></td>
        <td><%= product_variant.variantbarcode %></td>
        <td><%= product_variant.price %></td>
        <td><%= product_variant.taxes %></td>
        <td><%= product_variant.total %></td>
        <td><%= product_variant.extproductcode %></td>
        <td><%= product_variant.description %></td>
        <td><%= product_variant.activeid %></td>
        <td><%= link_to 'Show', product_variant %></td>
        <td><%= link_to 'Edit', edit_product_variant_path(product_variant) %></td>
        <td><%= link_to 'Destroy', product_variant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product variant', new_product_variant_path, class: "btn btn-primary btn-sm"  %>

