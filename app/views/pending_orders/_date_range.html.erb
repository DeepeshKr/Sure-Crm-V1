<div class="row">
  <%= form_tag  url_for(:controller => "pending_orders", :action => "index"), method: "get" do  %>
    
      <div class="col-xs-6">
        <div class="input-daterange input-group">
          <%= text_field_tag(:from_date, @from_date.strftime("%Y-%m-%d"), :data => {:provide => "datepicker"}, :id => "datepicker_from", :class => "form-control", :required => "true" )   %>
          <span class="input-group-addon">to</span>

           <%= text_field_tag(:to_date, @to_date.strftime("%Y-%m-%d"), :data => {:provide => "datepicker"}, :id => "datepicker_to", :class => "form-control", :required => "true" )   %>

        </div>
      </div>

      <div class="col-xs-3">
        <%= submit_tag "Show", name: nil, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
<script>
$('#datepicker_to').datepicker({format: 'yyyy-mm-dd'});
$('#datepicker_from').datepicker({format: 'yyyy-mm-dd'});
</script>
