<!-- set page title start -->
<% title "App Comment Display Levels" %>
<!-- set page title end -->
<p id="notice"><%= notice %></p>

<h1>App Comment Display Levels</h1>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority no</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_comment_display_levels.each do |app_comment_display_level| %>
      <tr>
        <td><%= app_comment_display_level.name %></td>
        <td><%= app_comment_display_level.priority_no %></td>
        <td><%= app_comment_display_level.description %></td>
        <td><%= link_to 'Show', app_comment_display_level %></td>
        <td><%= link_to 'Edit', edit_app_comment_display_level_path(app_comment_display_level) %></td>
        <td><%= link_to 'Destroy', app_comment_display_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App comment display level', new_app_comment_display_level_path %>
