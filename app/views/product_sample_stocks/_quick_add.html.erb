<%= bootstrap_form_for(@product_sample_stock) do |f| %>
  
   <%= f.hidden_field :product_master_id %>
    <%= f.hidden_field :product_list_id %>
    <%= f.hidden_field :prod_code %>
    <%= f.hidden_field :barcode %>
     <%= f.hidden_field :basic_price %>
    <%= f.hidden_field :shipping %>
   <div class="row">
    <div class="col-xs-8">
      <%= f.text_field :product_name, :required => true  %>
    </div>
   
     <div class="col-xs-2">
      <%= f.text_field :air_date,  :label => "Release Date" , :data => {:provide => "datepicker"}, :id => 'datepicker' , :required => true %>
     </div>
       <div class="col-xs-1">
       <%= f.text_field :stock, :required => true  %>
     </div>
  </div>
  <div class="row">
    <div class="col-xs-11">
    <%= f.text_area :description %>
    </div>
  </div>

   <div class="row">
    <div class="col-xs-3 col-md-offset-8">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
  <script>
  $(function() {
    $('#datepicker').datepicker({format: 'yyyy-mm-dd'});
  });
  </script>

