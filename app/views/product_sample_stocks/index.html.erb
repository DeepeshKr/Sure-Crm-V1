<p id="notice"><%= notice %></p>

<h1>Listing Product Sample Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Product master</th>
      <th>Product list</th>
      <th>Product name</th>
      <th>Prod code</th>
      <th>Barcode</th>
      <th>Basic price</th>
      <th>Shipping</th>
      <th>Air date</th>
      <th>Orders</th>
      <th>Stock</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @product_sample_stocks.each do |product_sample_stock| %>
      <tr>
        <td><%= product_sample_stock.product_master_id %></td>
        <td><%= product_sample_stock.product_list_id %></td>
        <td><%= product_sample_stock.product_name %></td>
        <td><%= product_sample_stock.prod_code %></td>
        <td><%= product_sample_stock.barcode %></td>
        <td><%= product_sample_stock.basic_price %></td>
        <td><%= product_sample_stock.shipping %></td>
        <td><%= product_sample_stock.air_date %></td>
        <td><%= product_sample_stock.orders %></td>
        <td><%= product_sample_stock.stock %></td>
        <td><%= product_sample_stock.description %></td>
        <td><%= link_to 'Show', product_sample_stock %></td>
        <td><%= link_to 'Edit', edit_product_sample_stock_path(product_sample_stock) %></td>
        <td><%= link_to 'Destroy', product_sample_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

