<% if @productaddonlists.present? %>
<div class="well well-lg">
<p class="lead">Would you like to add these products to the order</p>
<table class="table table-hover">
<thead>
    <tr>
      
      <th>Product Can be Added</th>
     
      <th></th>
    </tr>
  </thead>
   <tbody>
    <% @productaddonlists.each do |productaddonlist| %>
      <tr>
        <td><%= productaddonlist.productlistdetails  %></td>
        
        
        <td>
<%= form_tag("/addupsell", method: "POST") do |f| %>
<%= hidden_field_tag :order_id, @order_id %>
<%= hidden_field_tag :product_list_id, productaddonlist.id %>
<%= hidden_field_tag :pieces, 1 %>
<%= submit_tag "Add to Order", name: nil, class: "btn btn-success btn-sm" %>
       
<% end %>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% else %>
<p>No Add on available for products ordered </p>
<% end %>