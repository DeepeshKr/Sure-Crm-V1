<div class="row">
  <%= form_tag("/transfer_order_pricing", method: "get") do  %>
      <div class="col-xs-6">
        <%= select_tag(:product_code,
                       options_from_collection_for_select(@productlist, :extproductcode, :productinfo, selected: @product_code), {:class => "form-control"} )  %>
      </div>
      <div class="col-xs-4">
        <%= select_tag(:state,
                      options_from_collection_for_select(@states, :name, :name, selected: @state), {:class => "form-control"} )  %>
          <%=   %>

      </div>

      <div class="col-xs-2">
        <%= submit_tag "Check", name: nil, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
<% if @transfer_order_pricing.present? %>
<div class="well well-sm">
  <div class="row">
    <div class="col-xs-1">Product </div>
    <div class="col-xs-6"><%= @transfer_order_pricing.full_product_name %> </div>
    <div class="col-xs-1 col-xs-offset-1">State </div>
    <div class="col-xs-2"><%= @transfer_order_pricing.for_state %> </div>
  </div>

</div>

<div class="row">
  <div class="col-xs-6">
    <table class="table table-hover table-striped table-bordered">
      <tr><td>Basic </td>	<td class="text-right"> <%= @transfer_order_pricing.basic %> </td>	</tr>
      <tr><td>Shipping </td>	<td class="text-right"> <%= @transfer_order_pricing.shipping %> </td>	</tr>
      <tr><td>Total </td>	<td class="text-right"> <%= @transfer_order_pricing.basic + @transfer_order_pricing.shipping %> </td>	</tr>
      <tr><td>COD </td>	<td class="text-right"> <%= @transfer_order_pricing.cod.to_i %> </td>	</tr>
      <tr><td>Total </td>	<td class="text-right"> <%= @transfer_order_pricing.total_product_price.to_i %> </td>	</tr>
    </table>
  </div>
  <div class="col-xs-6">
    <table class="table table-hover table-striped table-bordered">

    <tr><td>VAT Percent </td>	<td class="text-right"> <%= @transfer_order_pricing.vat_percent %> </td>	</tr>
    <tr><td>Basic Price (Less VAT) </td>	<td class="text-right"> <%= @transfer_order_pricing.basic_price.to_i %> </td>	</tr>
    <tr><td>Landed Price </td>	<td class="text-right"> <%= @transfer_order_pricing.landed_price.to_i %></td>	</tr>
    <tr><td>Commission (14%)</td>	<td class="text-right"> <%= @transfer_order_pricing.commission.to_i %></td>	</tr>
    <tr><td>Tax Refund </td>	<td class="text-right"> <%= @transfer_order_pricing.tax_refund.to_i %> </td>	</tr>
    <tr><td>Base Price </td>	<td class="text-right"> <%= @transfer_order_pricing.base_price.to_i %> </td>	</tr>
    <tr><td>VAT Charge </td>	<td class="text-right"> <%= @transfer_order_pricing.vat_charge.to_i %> </td>	</tr>
    <tr><td>CST </td>	<td class="text-right"> <%= @transfer_order_pricing.cst.to_i %> </td>	</tr>
    <tr><td>C From </td>	<td class="text-right"> <%= @transfer_order_pricing.c_form.to_i %> </td>	</tr>
    <tr><td><strong>Transfer Price</strong> </td>	<td class="text-right"> <strong> <%= @transfer_order_pricing.final_total.to_i %>  </strong></td>	</tr>
    </table>

  </div>
</div>


<% end %>
