<% if (@dealtran != nil) then %>
<table class="table table-hover table-bordered">
  <thead>
  <tr>
     <th>Order Date</th>
     <th>Tran date</th>
     <th>Invoice No</th>
     <th>City</th>
     <th>Pincode</th>
     <th>Distributor</th>
     <th>Prod</th>
     <th class="text-right">Quantity</th>
     <th class="text-right">Invoice amount</th>
  </tr>
  </thead>

  <tbody>
    <% @dealtran.each do |v| %>
      <tr>
        <td><%= v.orderdate.strftime("%d-%b-%Y") || "NA" if v.orderdate %></td>
        <td><%= v.trandate.strftime("%d-%b-%Y") || "NA" if v.trandate %></td>
        <td><%= v.orderno %> <br> <small><%= v.custref %> </small></td>
        <td><%= v.city %></td>
        <td><%= v.pin %></td>
        <td><%= v.distname %> <br> <small><%= v.distcode %> </small> </td>
        <td><%= v.prod %></td>
        <td class="text-right"><%= v.qty %></td>
        <td class="text-right"><%= v.invoiceamount %></td>
      </tr>
    <% end %>
  </tbody>
   <thead>
     <tr>
     <th><strong>Total:</strong></th>
     <th></th>
     <th></th>
     
<th></th>
<th></th>
<th></th>
<th></th>
<th class="text-right"><strong><%= @retailsalespieces %></strong></th>
<th class="text-right"><strong><%= number_with_delimiter(@retailsalestotal, locale: :en)   %></strong></th>


    </tr>
</table>

<% else %>
  <div class="well well-lg">
  No Distributor / Transfer sale orders found
  </div>
 <% end %>
