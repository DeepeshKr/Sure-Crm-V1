<div class="row">
<div class="col-xs-1">
  <h3>Report</h3>

</div>
<div class="col-xs-11">
  <div class="row">
	<div class="col-xs-12"><small>General Accounting Report
(currently showing some default value)</small></div>
	<div class="col-xs-12"> <%= render 'search' %></div>
  </div>
  
</div>
</div>

<br>
<div class="well">
<h4><%= @type %> Report for <%= @prod %> between <%= @from_date %> and <%= @to_date %></h4>
</div>
<br>
<div class="alert alert-danger" role="alert">
	<div class="row">
	<div class="col-xs-12">
	<%= render 'summary' %>
	</div>
	</div>
</div>
	<br>
<br>

<div class="well">
		<div class="row">
		<div class="col-xs-6">
		<h3>	Opening Stock  </h3> 
			
		</div>
		<div class="col-xs-3">
			 <button type="button" class="btn btn-success " data-toggle="modal" data-target="#OpeningStockModal">Add Stock Entry</button>
		</div>
		<div class="col-xs-3">
		Total Opening Stock: <%= @opening_stock %>
		</div>
		
		</div>
</div>
	<div class="row">
<div class="col-xs-12">
<%= render 'product_stocks/list' %>
</div>
</div>
   
<br>

<div class="well">
		<div class="row">
		<div class="col-xs-6">
		<h3>	Journal Entries </h3> 
			
		</div>
		<div class="col-xs-3">
		 <button type="button" class="btn btn-success " data-toggle="modal" data-target="#JournalModal">Add Journal Entry</button>
		</div>
		<div class="col-xs-3">
		Journal Total: <%= @journal_total %>
		</div>
		
		</div>
</div>
	<div class="row">
<div class="col-xs-12">
<%= render 'product_stock_adjusts/list' %>
</div>
</div>
   
<br>


	<div class="well">
		<div class="row">
		<div class="col-xs-6 pull-left">
		<h3> 	Purchases <small>Rdate in Purchase_New</small>  </h3> 
		
		</div>
		<div class="col-xs-3">
		Total Pieces Bought: <%= @purchasespieces %>
		</div>
		<div class="col-xs-3">
		Total Amount: <%= @purchasestotal %>
		</div>
		
		</div>
	</div>
	<div class="row">
<div class="col-xs-12">
<%= render 'purchases_new/list' %>
</div>
</div>
   

<br>


	<div class="well">
		<div class="row">
		<div class="col-xs-6">
		<h3> 	Customer Sales <small>Orderdate / Paiddate in VPP</small> </h3> 
			
		</div>
		<div class="col-xs-3">
		Total Pieces Sold: <%= @retailsalespieces %>
		</div>
		<div class="col-xs-3">
		Total Amount: <%= @retailsalestotal %> 
		</div>
		
		</div>
	</div>
   <%= render 'vpp/list' %>
<br>

<div class="well">
		<div class="row">
		<div class="col-xs-6">
		<h3>	Wholesale Sales <small>Shdate in NewWlsDet</small>  </h3> 
			
		</div>
		<div class="col-xs-3">
		Total Pieces Sold: <%= @wholesalespieces %>
		</div>
		<div class="col-xs-3">
		Total Amount: <%= @wholesalestotal %>
		</div>
		
		</div>
</div>
<%= render 'newwlsdet/list' %>

<br>

<div class="well">
		<div class="row">
		<div class="col-xs-6">
		<h3>	Branch Sale / Transfer <small>Shdate in TEMPINV_NEWWLSDET</small>  </h3> 
			
		</div>
		<div class="col-xs-3">
		Total Pieces Sold: <%= @branchsalespieces %>
		</div>
		<div class="col-xs-3">
		Total Amount: <%= @branchsalestotal %>
		</div>
		
		</div>
</div>

<%= render 'tempinv_newwlsdet/list' %>

 <!-- Modal -->
<div class="modal fade" id="OpeningStockModal" tabindex="-1" role="dialog" aria-labelledby="OpeningStockModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="OpeningStockModal">Add Opening Stock</h4>
      </div>
      <div class="modal-body">
       <%= render 'product_stocks/quickcreate' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       <!--  <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="JournalModal" tabindex="-1" role="dialog" aria-labelledby="JournalModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="JournalModal">Add Journal Entry</h4>
      </div>
      <div class="modal-body">
           <%= render 'product_stock_adjusts/quickcreate' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       <!--  <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
