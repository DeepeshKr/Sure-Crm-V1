<!-- set page title start -->
<% title "App Priorities" %>
<!-- set page title end -->
<p id="notice"><%= notice %></p>

<h1>App Lists</h1>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority no</th>
      <th>Primary goal of app</th>
      <th>Description</th>
      <th>Version</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_lists.each do |app_list| %>
      <tr>
        <td><%= app_list.name %></td>
        <td><%= app_list.priority_no %></td>
        <td><%= app_list.primary_goal_of_app %></td>
        <td><%= app_list.description %></td>
        <td><%= app_list.version %></td>
        <td><%= app_list.location %></td>
        <td><%= link_to 'Show', app_list %></td>
        <td><%= link_to 'Edit', edit_app_list_path(app_list) %></td>
        <td><%= link_to 'Destroy', app_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App list', new_app_list_path %>
