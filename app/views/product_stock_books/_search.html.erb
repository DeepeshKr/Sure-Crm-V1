<div class="row">
   <%= form_tag  url_for(:controller => 'product_stock_books', :action => searchaction), method: "get" do  %>
   
      <div class="col-xs-6">
		  <% if @productlist.present? %>
        <%= select_tag(:barcode,
                       options_from_collection_for_select(@productlist, :list_barcode, :productinfo, selected: @barcode), {:class => "form-control"} )  %>
					   <% else %>
					   Showing all products
					   <% end %>
      </div> 
	  
      <div class="col-xs-4">
        <div class="input-daterange input-group">
          <%= text_field_tag(:from_date, @or_from_date, :data => {:provide => "datepicker"}, :id => "datepicker1", :class => "form-control", :required => "true" )   %>
          <span class="input-group-addon">to</span>
          <%= text_field_tag(:to_date, @or_to_date, :data => {:provide => "datepicker"}, :id => "datepicker2", :class => "form-control", :required => "true" )  %>
        </div>
      </div>

      <div class="col-xs-2">
        <%= submit_tag "Ok", name: nil, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
<script>
$('#datepicker1').datepicker({format: 'yyyy-mm-dd'});
$('#datepicker2').datepicker({format: 'yyyy-mm-dd'});
    var nowTemp = new Date();
    var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);
     
    var checkin = $('#datepicker1').datepicker({
      onRender: function(date) {
        return date.valueOf() < now.valueOf() ? 'disabled' : '';
      }
    }).on('changeDate', function(ev) {
      if (ev.date.valueOf() > checkout.date.valueOf()) {
        var newDate = new Date(ev.date)
        newDate.setDate(newDate.getDate() + 1);
        checkout.setValue(newDate);
      }
      checkin.hide();
      $('#datepicker2')[0].focus();
    }).data('datepicker');
    var checkout = $('#datepicker2').datepicker({
      onRender: function(date) {
        return date.valueOf() <= checkin.date.valueOf() ? 'disabled' : '';
      }
    }).on('changeDate', function(ev) {
      checkout.hide();
    }).data('datepicker');
</script>
