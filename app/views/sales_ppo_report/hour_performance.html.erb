 <div class="row">
	 <div class="col-xs-3">

	 <h4>HBN Orders between</h4>

	 </div>
   <%= form_tag  url_for(:controller => 'sales_ppo_report', :action => "hour_performance"), method: "get" do  %>
   <div class="col-xs-4">
         <%= select_tag :time_id, options_from_collection_for_select(@hbn_media_cost_master, :id, :cost_segment, :selected => @time_id), {:class => "form-control",  :required => true} %>


   </div>
       <div class="col-xs-4">
         <div class="input-daterange input-group">
           <%= text_field_tag(:from_date, @from_date, :data => {:provide => "datepicker"}, :id => "datepicker_from", :class => "form-control", :required => "true" )   %>
           <span class="input-group-addon">to</span>

            <%= text_field_tag(:to_date, @to_date, :data => {:provide => "datepicker"}, :id => "datepicker_to", :class => "form-control", :required => "true" )   %>

         </div>
       </div>

       <div class="col-xs-1">
         <%= submit_tag "Report", name: nil, class: "btn btn-primary" %>
       </div>
   <% end %>

 </div>
 <br>

<% if @employeeorderlist.present? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
    <th rowspan="2">No</th>
    <th colspan="2">Show details</th>
    <th colspan="3">Income</th>
    <th class="text-right" rowspan="2">Total Revenue</th>
    <th colspan="5">Expense</th>
    <th class="text-right" rowspan="2">Total Expense</th>
    <th rowspan="2">Profitability</th>
    </tr>

    <tr>
    <th>Date</th>
    <th>Show</th>
    <th class="text-right">Orders</th>
    <th class="text-right">Pieces</th>
    <th class="text-right">Sales</th>

    <th class="text-right">Produst Cost</th>
    <th class="text-right">Comm</th>
    <th class="text-right">Media Cost</th>
    <th class="text-right">Refund</th>
    <th class="text-right">Damages</th>
    </tr>
  </thead>
<tbody>
   <% @employeeorderlist.each do |c| %>
   <tr>
   <td><%= @sno %></td>
     <td><%= c[:date] %></td>

 <td>

  <table class="table table-stripped">
      <% c[:shows_list].each do |show| %>
    <tr>
        <%= show %>
    </tr>
      <% end %>
  </table>


 </td>
<td class="text-right">
   <%= c[:nos] %>
   <% @total_nos += c[:nos] %>

</td>
<td class="text-right">
   <%= c[:pieces] %>
   <% @total_pieces += c[:pieces] %>

</td>
<td class="text-right">
   <%= c[:total] %>
   <% @total_sales += c[:total] %>

</td>
<td class="text-right" title="Total Revenue">
   <%= c[:revenue] %>
   <% @total_revenue += c[:revenue] %>
</td>
<td class="text-right">
   <%= c[:product_cost] %>
   <% @total_product_cost += c[:product_cost] %>
</td>
<td class="text-right">
   <%= c[:variable_cost] %>
   <% @total_var_cost += c[:variable_cost] %>
</td>
<td class="text-right">
   <%= c[:fixed_cost] %>
   <% @total_fixed_cost += c[:fixed_cost] %>
</td>

<td class="text-right">
   <%= c[:refund] %>
   <% @total_refund += c[:refund] %>
</td>
<td class="text-right" title="Product Refund">
   <%= c[:refund] %>
   <% @total_refund += c[:refund] %>
</td>
<td class="text-right" title="Total Cost">
   <%= c[:refund] %>
   <% @total_refund += c[:refund] %>
</td>
<td class="text-right">   <%= c[:profitability] %>
<% @total_profit += c[:profitability] %> </td>


  </tr>
  <% @sno += 1 %>
 <% end %>



  </tbody>
 <tfoot>
    <tr>
     <th colspan="3" >Total</th>

      <th class="text-right"><%= @total_nos %></th>
       <th class="text-right"><%= @total_pieces %></th>
     <th class="text-right"><%= @total_sales %></th>
     <th class="text-right"><%= @total_revenue %></th>
       <th class="text-right"><%= @total_product_cost %></th>
       <th class="text-right"><%= @total_var_cost %></th>
     <th class="text-right"><%= @total_fixed_cost %></th>
     <th class="text-right"><%= @total_refund %></th>
     <th class="text-right"><%= @total_profit %></th>
       <th class="text-right" title="Total Refunds"><%= @total_profit %></th>
       <th class="text-right" title="Total Costs"><%= @total_profit %></th>
    <th class="text-right" title="Total Profit"><%= @total_profit %></th>
    <th></th>
     </tr>
  </tfoot>
  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
 <br>
 <%= link_to 'Download CSV file', hourly_ppo_path(for_date: @or_for_date , format: :csv), class: "btn btn-info btn-sm" %>
<hr>
<% @hidelist = true %>
<% if @hidelist == false %>
<div style="visibility:hidden">
<% @order_sno = 1 %>
<table class="table table-bordered">
  <tr>
    <td>Order No</td> <td>Date Time</td>

  </tr>
 <% @list_of_orders.each do |c| %>
<tr>
<td> <%= @order_sno %></td>
<td> <%= c[:order_no] %></td>
<td> <%= c[:time_of_order] %></td>
</tr>
<% @order_sno += 1 %></td>
</tr>
 <% end -%>
</table>
</div>
<% end %>
<script>
$('#datepicker_to').datepicker({format: 'yyyy-mm-dd'});
$('#datepicker_from').datepicker({format: 'yyyy-mm-dd'});
</script>
