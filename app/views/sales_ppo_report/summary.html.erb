 <div class="row">
	 <div class="col-xs-6">

	 <h4><strong>All</strong>HBN Order Summary for past few days</h4>
	 </div>
	 <div class="col-xs-6">

	 		
	</div>
 </div>

<% if @employeeorderlist.present? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
     <th class="text-right">No</th>
     <th class="text-right">Date</th>
     <th class="text-right">Total Orders</th>
     <th class="text-right">Total Value</th>
      <th class="text-right">Revenue</th>
       <th class="text-right">Variable Cost</th>
     <th class="text-right">Fixed Cost</th>
     <th class="text-right">Profitability</th>
    <th class="text-right">PPO</th>
   
     </tr>
  </thead>
<tbody>
   <% @employeeorderlist.each do |c| %>
   <tr>
   <td><%= @sno %></td>

 <td><%= c[:for_date] %></td>

<td class="text-right">
   <%= c[:nos] %> 
  
</td>
<td class="text-right">
   <%= c[:total] %> 
   
</td>
<td class="text-right">
   <%= c[:revenue] %> 
  
</td>
<td class="text-right">
   <%= c[:variable_cost] %> 
  
</td>
<td class="text-right">
   <%= c[:fixed_cost] %> 
  
</td>
<td class="text-right">   <%= c[:profitability] %>

<td >

<td>
<%= link_to "View PPO", hourly_ppo_path(for_date: c[:for_date]), :target => "_blank" %>
</td>


  </tr> 
  <% @sno += 1 %> 
 <% end %>
  </tbody>

  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
 <br>

