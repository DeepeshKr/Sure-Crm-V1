 <div class="row">
	 <div class="col-xs-6">

	 <h4><strong>All</strong>HBN Order Summary for past few days</h4>
	 </div>
	 <div class="col-xs-6">

	 		
	</div>
 </div>

<% if @employeeorderlist.present? %>
<table class="table table-hover table-bordered">
<thead>
   <tr>
   <th  rowspan="2">No</th>
     <th  colspan="2">Date</th>
    
      <th colspan="3">Income</th>
      <th colspan="3">Expense</th>
     
     <th rowspan="2">Profitability</th>
    <th   rowspan="2"></th>
     </tr>
    <tr>
    
     <th class="text-right">Start Time</th>
     <th class="text-right">End Time</th>
     
       <th class="text-right">Nos</th>
     <th class="text-right">Sales</th>
      <th class="text-right">Revenue</th>

       <th class="text-right">Commision</th>
     <th class="text-right">Media Cost</th>
       <th class="text-right">Total Cost</th>
    
     </tr>
  </thead>

<tbody>
   <% @employeeorderlist.each do |c| %>
   <tr>
   <td><%= @sno %></td>

 <td><%= c[:for_date] %></td>

<td class="text-right">
   <%= c[:nos] %> 
  
</td>
<td class="text-right">
   <%= c[:total] %> 
   
</td>
<td class="text-right">
   <%= c[:revenue] %> 
  
</td>
<td class="text-right">
   <%= c[:variable_cost] %> 
  
</td>
<td class="text-right">
   <%= c[:fixed_cost] %> 
  
</td>
<td class="text-right">   <%= c[:profitability] %>

<td >

<td>
<%= link_to "View PPO", hourly_ppo_path(for_date: c[:for_date]), :target => "_blank" %>
</td>


  </tr> 
  <% @sno += 1 %> 
 <% end %>
  </tbody>

  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
