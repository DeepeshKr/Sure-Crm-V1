 <div class="row">
	 <div class="col-xs-6">

	 <h4>HBN Hourly Orders for Date: <%= @or_for_date %></h4>
	 </div>
	 <div class="col-xs-6">
   
	 		
	</div>
 </div>
 <br>

<% if @employeeorderlist.present? %>
<table class="table table-hover table-bordered">
  <thead>
   <tr>
   <th  rowspan="2">No</th>
     <th  colspan="2">Time</th>
    
      <th colspan="3">Income</th>
      <th colspan="3">Expense</th>
     
     <th rowspan="2">Profitability</th>
    <th   rowspan="2"></th>
     </tr>
    <tr>
    
     <th class="text-right">Start Time</th>
     <th class="text-right">End Time</th>
     
       <th class="text-right">Nos</th>
     <th class="text-right">Sales</th>
      <th class="text-right">Revenue</th>

       <th class="text-right">Commision</th>
     <th class="text-right">Media Cost</th>
       <th class="text-right">Total Cost</th>
    
     </tr>
  </thead>
<tbody>
   <% @employeeorderlist.each do |c| %>
   <tr>
   <td><%= @sno %></td>

 <td><%= c[:starttime] %></td>
 <td><%= c[:endtime] %></td>



<td class="text-right">
   <%= c[:nos] %> 
   <% @total_nos += c[:nos] %>
</td>
<td class="text-right">
   <%= c[:total] %> 
   <% @total_sales += c[:total] %>
</td>
<td class="text-right">
   <%= c[:revenue] %> 
   <% @total_revenue += c[:revenue] %>
</td>
<td class="text-right">
   <%= c[:variable_cost] %> 
   <% @total_var_cost += c[:variable_cost] %>
</td>
<td class="text-right">
   <%= c[:fixed_cost] %> 
   <% @total_fixed_cost += c[:fixed_cost] %>
</td>
<td>
<%= c[:variable_cost] + c[:fixed_cost] %> 
</td>
<td class="text-right">   <%= c[:profitability] %>
<% @total_profit += c[:profitability] %> </td>

<td >
<%= link_to "Details", ppo_summary_path(for_date: @or_for_date, start_time: c[:start_time], end_time: c[:end_time]), :target => "_blank" %>
</td>
  </tr> 
  <% @sno += 1 %> 
 <% end %>

 

  </tbody>
 <tfoot>
    <tr>
     <th colspan="3" >Total</th>
    
     
       <th class="text-right"><%= @total_nos %></th>
     <th class="text-right"><%= @total_sales %></th>
     <th class="text-right"><%= @total_revenue %></th>
       <th class="text-right"><%= @total_var_cost %></th>
     <th class="text-right"><%= @total_fixed_cost %></th>
     <th class="text-right"><%= @total_profit %></th>
    <th></th>
     </tr>
  </tfoot>
  </table>
  <% else %>
  <div class="well well-sm">
  <h5>Please select a date to generate the report </h5>
  </div>
  <% end %>
 <br>


<%= @hourlist %>