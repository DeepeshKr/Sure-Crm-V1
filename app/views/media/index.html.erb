<h1>Listing media</h1>

<table class="table table-hover">
  <thead>
    <tr>
     <th>Reference Name</th>
      <th>Name</th>
      <th>Telephone</th>
      <th>Alt telephone</th>
      <th>State</th>
      <th>Active</th>
      <th>Group</th>
      <th>Commission</th>
      <th>Percent </th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.find_each(batch_size: 100) do |medium| %>
      <tr>
        <td><%= medium.ref_name %></td>
        <td><%= medium.name %></td>
        <td><%= medium.telephone %></td>
        <td><%= medium.alttelephone %></td>
        <td><%= medium.state %></td>
        <td><%= medium.active %></td>
        <td><%= medium.media_group.name if medium.media_group %></td>
        <td><%= medium.media_commision.name if medium.media_commision %></td>
         <td><%= medium.value %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Medium', new_medium_path , class: "btn btn-info btn-lg" %>
