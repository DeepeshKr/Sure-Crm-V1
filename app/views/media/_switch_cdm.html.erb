<div class="panel panel-danger">
  <div class="panel-body">
    <div class="row">
   	 <div class="col-xs-10">
   	 	<h4><%= @regenerate_ppo %></h3>
   	 </div>
      <%= form_tag  url_for(:controller => 'media', :action => "switch_cdm"), method: "post" do  %>
	   <div class="col-xs-5">
		   <%= f.select(:employee_id,
		      options_from_collection_for_select(@employees, :id, :name, selected: nil),
		          {:prompt => '-Select Managed by-', include_blank: '-Not managed by anyone-'} ,
		      {label: " Managed By"})  %>
	   </div>
	   <div class="col-xs-5">
		   <%= f.select(:employee_id,
		      options_from_collection_for_select(@employees, :id, :name, selected: nil),
		          {:prompt => '-Replace Managed by-', include_blank: '-Not managed by anyone-'} ,
		      {label: " Replaced By"})  %>
	   </div>
          <div class="col-xs-2">
            <%= submit_tag "Re Generate", name: nil, class: "btn btn-danger" %>
          </div>
      <% end %>

    </div>
  </div>
   <div class="panel-footer">Warning the existing CDM would be replaced by the new manager.</div>
</div>
