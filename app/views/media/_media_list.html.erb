<h3>List of Operators</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Alt telephone</th>
      <th>State</th>
      <th>Active</th>
      
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.name %></td>
        <td><%= medium.telephone %></td>
        <td><%= medium.alttelephone %></td>
        <td><%= medium.state %></td>
        <td><%= medium.active %></td>
      
        <td><%= medium.description %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
