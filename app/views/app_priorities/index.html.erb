<!-- set page title start -->
<% title "App Priorities" %>
<!-- set page title end -->
<p id="notice"><%= notice %></p>

<h1>App Priorities</h1>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority no</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_priorities.each do |app_priority| %>
      <tr>
        <td><%= app_priority.name %></td>
        <td><%= app_priority.priority_no %></td>
        <td><%= app_priority.description %></td>
        <td><%= link_to 'Show', app_priority %></td>
        <td><%= link_to 'Edit', edit_app_priority_path(app_priority) %></td>
        <td><%= link_to 'Destroy', app_priority, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App priority', new_app_priority_path %>
