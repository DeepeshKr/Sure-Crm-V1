<p id="notice"><%= notice %></p>

<h1>Listing Order Payments</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Order master</th>
      <th>Ref no</th>
      <th>Orderpaymentmode</th>
      <th>Paid date</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_payments.each do |order_payment| %>
      <tr>
        <td><%= order_payment.order_master_id %></td>
        <td><%= order_payment.ref_no %></td>
        <td><%= order_payment.orderpaymentmode.name %></td>
        <td><%= order_payment.paid_date.strftime("%d-%b-%y") if order_payment.paid_date %></td>
        <td><%= order_payment.name %></td>
        <td><%= order_payment.description %></td>
        <td><%= link_to 'Show', order_payment %></td>
        <td><%= link_to 'Edit', edit_order_payment_path(order_payment) %></td>
        <td><%= link_to 'Destroy', order_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order payment', new_order_payment_path, class: "btn btn-primary btn-sm" %>
