<%= simple_form_for(@order_payment) do |f| %>
  <%= f.error_notification %>
    <%= f.hidden_field :order_master_id %>
    <%= f.hidden_field :employee_id %>
  <div class="form-inputs">
    <%= f.input :ref_no %>
    <%= f.input :orderpaymentmode_id %>
    <%= f.input :paid_date %>
	<%= f.input :name %>
    <%= f.input :description %>

  </div>

  <div class="form-actions">
    <div class="row">
        <div class="col-xs-2 col-md-offset-5">
          <%= f.submit  class: "btn btn-primary" %>       
        </div>
    </div>
  </div>
<% end %>
