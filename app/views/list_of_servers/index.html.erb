<p id="notice"><%= notice %></p>

<h1>Listing List Of Servers</h1>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active since</th>
      <th>Internal ip</th>
      <th>Vpn ip</th>
      <th>External ip</th>
      <th>Current status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_of_servers.each do |list_of_server| %>
      <tr>
        <td><%= list_of_server.name %></td>
        <td><%= list_of_server.description %></td>
        <td><%= list_of_server.active_since %></td>
        <td><%= list_of_server.internal_ip %></td>
        <td><%= list_of_server.vpn_ip %></td>
        <td><%= list_of_server.external_ip %></td>
        <td><%= list_of_server.current_status %></td>
        <td><%= link_to 'Show', list_of_server %></td>
        <td><%= link_to 'Edit', edit_list_of_server_path(list_of_server) %></td>
        <td><%= link_to 'Destroy', list_of_server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List of server', new_list_of_server_path, class: "btn btn-primary" %>
