

<table class="table table-hover">
  <thead>
    <tr>
    <th>Date</th>
    <th>Ref Name (Clubbed Names)</th>
    <th>Name</th>
     <th>Product variant</th>
      <th>Start time</th>
       <th>Air time</th>
      <th>End time</th>
        <th>Cost (Total Cost)</th>


        <th>Status</th>
        <th>Updated Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>

    <% @campaign_playlists.each do |campaign_playlist| %>
      <tr class="<%= category_table_row_class(campaign_playlist.campaign_play_list_status.name) %>">
      <td><%= campaign_playlist.for_date.strftime("%d-%b-%Y") || "No Date" if campaign_playlist.for_date.present? %></td>
       <td><%= campaign_playlist.ref_name %></td>
        <td><%= campaign_playlist.product_variant.name if campaign_playlist.product_variant  %></td>
        <td><%= campaign_playlist.name %></td>
        <td><%= campaign_playlist.starttime %></td>
         <td><%= campaign_playlist.playtime %> <br> <small><%= campaign_playlist.playlist_group_minutes %> </small></td>
        <td><%= campaign_playlist.endtime %> <br> <small><%= campaign_playlist.playlist_group_end_time %> </small></td>
        <td> <%= campaign_playlist.cost %><br> <small> <%= campaign_playlist.cost_of_group_playlist %>  </small>
        <%= link_to 'Edit Cost',campaign_playlists_new_media_cost_path(id: campaign_playlist.id, redirect_to: request.original_url), {:style=>'color:#0000A0;'} %></td>
         <td><%= campaign_playlist.campaign_play_list_status.name if campaign_playlist.campaign_play_list_status%></td>
        <td><%= campaign_playlist.updated_at.strftime("%d-%b-%Y %I:%M %p") %></td>
          <td><%= link_to 'Edit', edit_campaign_playlist_path(campaign_playlist) %>
          </td>
          <td><%if campaign_playlist.list_status_id == 10000 %>
          <%= link_to 'Destroy Group', campaign_playlist, method: :delete, data: { confirm: 'This will remove the entire group. Are you sure?' }, class: "btn btn-info btn-xs" %>
          <% end %>
          </td>
      </tr>
    <% end %>

  </tbody>
</table>
