<div class="row">
<div class="col-xs-4">
<h3>Product Journal Entry</h3>
</div>
<div class="col-xs-4">
<%= @for_date_display %>
</div>
<div class="col-xs-4">
<%= render 'date_search' %>
</div>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
    <th>Heading</th>
      <th>Product</th>
      <th>Change</th>
      <th>Prod</th>
      <th>BARCODE</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_stock_adjusts.each do |product_stock_adjust| %>
      <tr>
       <td><%= product_stock_adjust.name %></td>
        <td><%== product_stock_adjust.productinfo %></td>
        <td><%= product_stock_adjust.change_stock %></td>
        <td><%= product_stock_adjust.ext_prod_code %></td>
         <td><%= product_stock_adjust.ext_prod_code %></td>
        <td><%= product_stock_adjust.created_date.strftime("%d-%b-%Y") %></td>
        <td><%= product_stock_adjust.description %></td>
        <td><%= link_to 'Edit', edit_product_stock_adjust_path(product_stock_adjust) %></td>
        <td><%= link_to 'Destroy', product_stock_adjust, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="well well-sm">
    <div class="row">
    <div class="col-xs-4">
    <h4> Add New Journal Entries <%= @for_date_display %></h4> 
      
    </div>
    <div class="col-xs-3">
     <button type="button" class="btn btn-success " data-toggle="modal" data-target="#JournalModal">Add Journal</button>
    </div>
    
    </div>
    
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="JournalModal" tabindex="-1" role="dialog" aria-labelledby="JournalModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="JournalModal">Add Journal Entry</h4>
      </div>
      <div class="modal-body">
           <%= render 'product_stock_adjusts/quickcreate' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       <!--  <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
<!-- bottom menu -->