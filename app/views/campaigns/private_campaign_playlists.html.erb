<!-- set page title start -->
<% title "Private Campaigns Playlist" %>
<!-- set page title end -->
<div class="row">
<div class="col-xs-6">
<h3>Private Campaign Playlist</h3>
</div>
<div class="col-xs-4">
<%= render partial: 'date_search', locals:{get_action: "private_campaign_playlists"} %>
</div>
</div>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>For date</th>
      <th>Media</th>
      <th colspan="1"></th>
    </tr>
  </thead>
	<% if @campaigns.present? %>
	  <tbody>
	    <% @campaigns.each do |campaign| %>
	      <tr>
	        <td><%= campaign.name %></td>
	        <td><%= campaign.startdate.strftime("%d-%b-%Y") %></td>
       
	        <td><%= campaign.medium.mediainfo if campaign.medium %></td>
			<td><%= link_to 'View', private_campaign_playlist_campaigns_path(campaign_id: campaign.id), class: "btn btn-primary btn-sm" %></td>
	      </tr>
	    <% end %>
	  </tbody>
  	<% end %>
</table>

<br>

<%= link_to 'New Pvt Campaign', new_private_campaign_campaigns_path, class: "btn btn-info btn-lg" %>