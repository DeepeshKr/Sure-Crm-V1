<div class="row">
<div class="col-xs-6">
<h3><%= @showing_for_date %></h3>
</div>
<div class="col-xs-4">
<%= render('date_search') %>
</div>
</div>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>For date</th>
      
      <th>Media</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.startdate.strftime("%d-%b-%Y") %></td>
       
        <td><%= campaign.medium.mediainfo if campaign.medium %></td>
         <td><%= link_to 'View Active', campaign_path(:id => campaign.id, :only_active => "true"), class: "btn btn-primary btn-xs" %></td>
		<td><%= link_to 'Add / Edit', campaign, class: "btn btn-primary btn-sm" %></td>
       <!--  <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_campaign_path, class: "btn btn-info btn-lg" %>
