<p id="notice"><%= notice %></p>

<h1>
   <%= @campaign.name %>
</h1>

<div class="row">
	<div class="col-xs-2">
		 <strong>Start date:</strong>
  <%= @campaign.startdate.strftime("%d-%b-%Y") %>
	</div>
	<div class="col-xs-2">
		 <strong>End date:</strong>
  <%= @campaign.enddate.strftime("%d-%b-%Y") %>
	</div>
	<div class="col-xs-4">
		 <strong>Media:</strong>
  <%= @campaign.medium.mediainfo %>
	</div>
	
	
	<div class="col-xs-2">
	 <strong>Cost:</strong>
  <%= @campaign.cost %>
	</div>
	
</div>

<p>
  <strong>Description:</strong>
  <%= @campaign.description %>
</p>

<%= link_to 'Edit', edit_campaign_path(@campaign), class: "btn btn-info btn-xs" %> |
<%= link_to 'Back', campaigns_path, class: "btn btn-info btn-xs" %>

<hr />
