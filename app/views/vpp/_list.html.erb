<% if (@vpp != nil) then %>
<table class="table table-hover">
  <thead>
    <tr>
     <th>Orderdate</th>
<th>source</th>
<th>Despatch</th>
<th>Prod</th>
<th>Quantity</th>
<th>City</th>
<th>Invoice amount</th>
<th>Paid date</th>
<th>Return date</th>
<th>Refunddate</th>
<th>Shipped</th>
<th>Paidamt</th>
<th>Refundamt</th>
<th>State</th>
    </tr>
  </thead>

  <tbody>
    <% @vpp.each do |v| %>
      <tr>
        <td><%= v.orderdate.strftime("%d-%b-%Y") || "NA" if v.orderdate %></td>
<td><%= v.ordersource %></td>
<td><%= v.despatch %></td>
<td><%= v.prod %></td>
<td><%= v.quantity %></td>
<td><%= v.city %></td>
<td><%= v.invoiceamount %></td>
<td><%= v.paiddate.strftime("%d-%b-%Y") || "NA" if v.paiddate %></td>
<td><%= v.returndate.strftime("%d-%b-%Y") || "NA" if v.returndate  %></td>
<td><%= v.refunddate.strftime("%d-%b-%Y") || "NA" if v.refunddate  %></td>
<td><%= v.shipped %></td>
<td><%= v.paidamt %></td>
<td><%= v.refundamt %></td>
<td><%= v.state %></td>


        
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <div class="well well-lg">
  No Retail sale orders found
  </div>
 <% end %>
 <br>