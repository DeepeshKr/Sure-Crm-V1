<div class="row">
<div class="col-xs-4">
<h3>Help Menu</h3>
</div>
<div class="col-xs-8">
<%= render 'search' %>
</div>
</div>  


<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
       <th>Description</th>
       <th></th>
    </tr>
  </thead>

  <tbody>
    <% @help_files.each do |help_file| %>
      <tr>
        <td><%= help_file.name %><%= help_file.link %></td>
        <td><%= help_file.description %></td>
        
        <td><%= link_to 'Show', help_file %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>