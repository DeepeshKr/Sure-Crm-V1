<% if @product_stocks.present? %>

<table class="table table-hover">
  <thead>
    <tr>
    
      <th>Date</th>
      <th>stock</th>
      
    </tr>
  </thead>

  <tbody>
    <% @product_stocks.each do |product_stock| %>
      <tr>
         <td><%= product_stock.checked_date.strftime("%d-%b-%Y") %></td>
       
        <td><%= product_stock.current_stock %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="well well-sm">
    No opening stock found
    </div>
<% end %>
<br>