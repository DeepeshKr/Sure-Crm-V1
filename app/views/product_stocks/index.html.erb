<p id="notice"><%= notice %></p>

<h1>Listing Product Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Product master</th>
      <th>Product list</th>
      <th>Current stock</th>
      <th>Ext prod code</th>
      <th>Barcode</th>
      <th>Checked date</th>
      <th>Emp code</th>
      <th>Emp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_stocks.each do |product_stock| %>
      <tr>
        <td><%= product_stock.product_master_id %></td>
        <td><%= product_stock.product_list_id %></td>
        <td><%= product_stock.current_stock %></td>
        <td><%= product_stock.ext_prod_code %></td>
        <td><%= product_stock.barcode %></td>
        <td><%= product_stock.checked_date %></td>
        <td><%= product_stock.emp_code %></td>
        <td><%= product_stock.emp_id %></td>
        <td><%= link_to 'Show', product_stock %></td>
        <td><%= link_to 'Edit', edit_product_stock_path(product_stock) %></td>
        <td><%= link_to 'Destroy', product_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

