<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-xs-4">
<h3>Opening Product Stocks </h3>
</div>
<div class="col-xs-4">
<%= @for_date_display %>
</div>
<div class="col-xs-4">
<%= render 'date_search' %>
</div>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Product</th>
        <th>Prod</th>
        <th>BARCODE</th>
       <th>Date</th>
      <th>Opening Stock</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
<% if @product_stocks.present? %>
  <tbody>
    <% @product_stocks.each do |product_stock| %>
      <tr>
        <td><%= product_stock.product_master.name || "None" if product_stock.product_master %>
        <small>(<%= product_stock.product_master.extproductcode || "None" if product_stock.product_master %>)</small></td>
          <td><%= product_stock.ext_prod_code %></td>
          <td><%= product_stock.barcode %></td>
          <td><%= product_stock.checked_date.strftime("%d-%b-%Y") %></td>
         <td><%= product_stock.current_stock %></td>
        <td><%= link_to 'Edit', edit_product_stock_path(product_stock) %></td>
        <td><%= link_to 'Destroy', product_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

<br>

<div class="well well-sm">
    <div class="row">
    <div class="col-xs-8">
    <h4>Add  Opening Stock of <%= @productlistname %> for <%= @for_date_display %> </h4> 
      
    </div>
    <div class="col-xs-2">
       <button type="button" class="btn btn-success " data-toggle="modal" data-target="#OpeningStockModal">Add Stock Entry</button>
    </div>
    
    
    </div>
</div>

 <!-- Modal -->
<div class="modal fade" id="OpeningStockModal" tabindex="-1" role="dialog" aria-labelledby="OpeningStockModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="OpeningStockModal">Add Opening Stock</h4>
      </div>
      <div class="modal-body">
       <%= render 'product_stocks/quickcreate' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
       <!--  <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
