<p id="notice"><%= notice %></p>

<h1>Listing Daily Task Logs</h1>

<table>
  <thead>
    <tr>
      <th>Daily task</th>
      <th>Name</th>
      <th>Syntax error</th>
      <th>Status</th>
      <th>Checked on</th>
      <th>Checked by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_task_logs.each do |daily_task_log| %>
      <tr>
        <td><%= daily_task_log.daily_task_id %></td>
        <td><%= daily_task_log.name %></td>
        <td><%= daily_task_log.syntax_error %></td>
        <td><%= daily_task_log.status %></td>
        <td><%= daily_task_log.checked_on %></td>
        <td><%= daily_task_log.checked_by %></td>
        <td><%= link_to 'Show', daily_task_log %></td>
        <td><%= link_to 'Edit', edit_daily_task_log_path(daily_task_log) %></td>
        <td><%= link_to 'Destroy', daily_task_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

