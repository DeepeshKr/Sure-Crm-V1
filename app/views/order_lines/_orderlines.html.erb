<div class="panel panel-primary">
  <div class="panel-heading">
   <h3 class="panel-title">Order Summary</h3>
    
  </div>
  
   
 

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product Description </th>
      <th>Pieces</th>
      <th>Basic</th>
      <th>Shipping</th>
      <th>COD</th>
      <th>Credit Card</th>
      <th>Maharashtra</th>
      
      
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @order_lines.each do |order_line| %>
      <tr>
         <td><%= order_line.product_variant.name %></td>
        <td><%= order_line.pieces %></td>
       <td><%= order_line.subtotal %></td>
        <td class="text-right">
<%= order_line.subtotal + order_line.shipping %>
<hr>
     <small><%= order_line.shipping %> </small>   </td>

        <td class="text-right">
<%= order_line.subtotal + order_line.shipping + order_line.codcharges %> <hr>
<small> <%= order_line.codcharges %></small>
       </td>

        <td class="text-right"><%= order_line.subtotal + order_line.shipping + order_line.creditcardcharges %> 
<hr>
<small> <%= order_line.creditcardcharges %></small>
        </td>
        <td class="text-right">
<%= order_line.subtotal + order_line.shipping + order_line.codcharges + order_line.maharastraextra %> 
<hr>
<small> <%= order_line.maharastraextra %></small>
       </td>  
        <td><%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  
</div>