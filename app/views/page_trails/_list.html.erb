<% if @page_trails.present? %>
<table class="table table-hover table-stripped table-bordered">
  <thead>
    <tr>
	  <th>Date Time</th>
      <th>Page Name</th>
      <th>Order</th>
      <th>Url</th>
      <th>Employee</th>
    </tr>
  </thead>

  <tbody>
    <% @page_trails.each do |page_trail| %>
      <tr>
		<td><%= (page_trail.created_at + 330.minutes).strftime("%d-%b-%y %H:%M %P") %></td>
        <td><%= page_trail.name %></td>
        <td><%= page_trail.order_id %></td>
        <td><%= page_trail.url %></td>
        <td><%= page_trail.employee.name if page_trail.employee %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>