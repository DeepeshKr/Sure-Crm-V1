<p id="notice"><%= notice %></p>

<h1>Listing Product Cost Masters</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Prod</th>
      <th>Barcode</th>
      <th>Cost</th>
      <th>Revenue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_cost_masters.each do |product_cost_master| %>
      <tr>
        <td><%= product_cost_master.product_id %></td>
        <td><%= product_cost_master.prod %></td>
        <td><%= product_cost_master.barcode %></td>
        <td><%= product_cost_master.cost %></td>
        <td><%= product_cost_master.revenue %></td>
        <td><%= link_to 'Show', product_cost_master %></td>
        <td><%= link_to 'Edit', edit_product_cost_master_path(product_cost_master) %></td>
        <td><%= link_to 'Destroy', product_cost_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product cost master', new_product_cost_master_path, class: "btn btn-primary" %>
