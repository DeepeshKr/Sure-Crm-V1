<% if @product_cost_masters.present? %>
<h4>Product Costs for <%= @nos_with_price %> Products</h4>
<div class="well well-sm">
	<div class="row">
		<div class="col-xs-12 pull-right">
		  <div class="digg_pagination">
		    <%= will_paginate @product_cost_masters, :container => false %>
		  </div>
		</div>
	</div>
</div>

<table class="table table-hover table-bordered">
  <thead>
  <tr>
    <th rowspan="2">Name</th>
    <th colspan="2">Revenue</th>
	<th colspan="6">Cost</th>
	<th rowspan="2">Total Cost</th>
	<th colspan="3">Others</th>
  </tr>
    <tr>
      <th>Basic</th>
      <th>Shipping handling</th>
      <th>Product cost</th>
      <th>Postage</th>
      <th>Tel cost</th>
      <th>Royalty</th>
      <th>Cost of return</th>
      <th>Call centre commission</th>
      <th>Transfer order basic</th>
      <th>Dealer network basic</th>
      <th>Wholesale variable cost</th>
    </tr>
  </thead>

  <tbody>
    <% @product_cost_masters.each do |product_cost_master| %>
      <tr>
        <td><%= product_cost_master.product_list.name if product_cost_master.product_list %>
        |  <%= product_cost_master.prod %><%= product_cost_master.barcode %> 
	 </td>
        <td><%= product_cost_master.basic_cost %></td>
        <td><%= product_cost_master.shipping_handling %></td>
        <td><%= product_cost_master.product_cost %></td>
        <td><%= product_cost_master.postage %></td>
        <td><%= product_cost_master.tel_cost %></td>
        <td><%= product_cost_master.royalty %></td>
        <td><%= product_cost_master.cost_of_return %></td>
        <td><%= product_cost_master.call_centre_commission %></td>
		<td><strong><%= product_cost_master.cost %> </strong></td>
        <td><%= product_cost_master.transf_order_basic %></td>
        <td><%= product_cost_master.dealer_network_basic %></td>
        <td><%= product_cost_master.wholesale_variable_cost %></td>

      </tr>
	  <tr>
		 <td colspan="2"> <%= link_to "View Calculations #{product_cost_master.prod}", product_cost_master,
	        class:"btn btn-primary btn-xs" %> </td>
	   		 <td> <%= link_to "Edit #{product_cost_master.prod}", edit_product_cost_master_path(product_cost_master),
	   	        class:"btn btn-default btn-xs" %> </td>
		 <td colspan="6">Created: <%= (product_cost_master.created_at + 330.minutes).strftime('%d-%b-%Y %H:%M %P') %> <small>Auto added with new product variant </small></td>
		 <td colspan="4"> Last updated On: <%= (product_cost_master.updated_at  + 330.minutes).strftime('%d-%b-%Y %H:%M %P') %> </td> 
	  </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<h3>No Details found in Product Master </h3>

<% end %>
